<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearComment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onPrimary&quot;}">
        <FrameLayout android:gravity="center_horizontal"
            android:id="@+id/frameFifteen"
            android:layout_height="@dimen/_668pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_18pxv" android:paddingTop="@dimen/_18pxv">
            <ImageView android:id="@+id/imageThumbnail"
                android:layout_gravity="center"
                android:layout_height="@dimen/_622pxv"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_12pxh}"
                imageRes="@{@drawable/img_thumbnail_622x375}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_622x375"/>
            <ImageView android:id="@+id/imageHead"
                android:layout_gravity="top|center"
                android:layout_height="@dimen/_38pxh"
                android:layout_width="@dimen/_339pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_head"
                tools:ignore="ContentDescription" tools:src="@drawable/img_head"/>
        </FrameLayout>
        <EditText
            android:background="@drawable/rectangle_border_name_blue_gray_400_radius_5"
            android:drawableEnd="@drawable/img_save"
            android:drawablePadding="@dimen/_30pxh"
            android:ellipsize="end" android:fontFamily="@font/inter"
            android:hint="@string/msg_write_a_comment"
            android:id="@+id/etComment" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_3pxh"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_15pxh"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="@dimen/_15pxv" android:singleLine="true"
            android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
            android:textColorHint="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
            android:textFontWeight="500"
            android:textSize="@dimen/_14pxh" android:textStyle="bold" tools:ignore="Autofill"/>
    </LinearLayout>
</layout>
