<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearSongMenuFull"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearMenu"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh"
            android:paddingTop="@dimen/_14pxv" style="@style/groupStyle{&quot;name&quot;:&quot;black_900&quot;}cornerRadius">
            <View
                android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_1_radius_2"
                android:id="@+id/viewSwipeIndicator"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_5pxv" android:layout_width="@dimen/_35pxh"/>
            <LinearLayout android:id="@+id/linearSixtyTwo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_1_radius_19"
                    android:id="@+id/btnBookmark"
                    android:layout_height="@dimen/_38pxh"
                    android:layout_width="@dimen/_38pxh"
                    android:paddingHorizontal="@dimen/_7pxh"
                    android:paddingVertical="@dimen/_7pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_bookmark" tools:ignore="ContentDescription"/>
                <LinearLayout android:id="@+id/linearSongDetails"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <ImageView android:id="@+id/imageThumbnail"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_65pxh"
                        android:layout_width="@dimen/_65pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_4pxh}"
                        imageRes="@{@drawable/img_thumbnail}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail"/>
                    <TextView android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:id="@+id/txtRenaissance"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@string/lbl_renaissance"
                        style="@style/txtRobotomedium18" tools:text="@string/lbl_renaissance"/>
                    <LinearLayout android:id="@+id/linearSongDetails1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPodvalCaplella"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@string/lbl_podval_caplella"
                            style="@style/txtRobotoregular14_1" tools:text="@string/lbl_podval_caplella"/>
                        <View
                            android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_0_58_radius_1"
                            android:id="@+id/viewView"
                            android:layout_height="@dimen/_3pxh" android:layout_width="@dimen/_3pxh"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTime"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@string/lbl_3_43"
                            style="@style/txtRobotoregular14_1" tools:text="@string/lbl_3_43"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_1_radius_19"
                    android:id="@+id/btnQuestion"
                    android:layout_height="@dimen/_38pxh"
                    android:layout_width="@dimen/_38pxh"
                    android:paddingHorizontal="@dimen/_8pxh"
                    android:paddingVertical="@dimen/_8pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_question" tools:ignore="ContentDescription"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerOptions"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}" tools:itemCount="6" tools:listitem="@layout/row_options"/>
        </LinearLayout>
    </LinearLayout>
</layout>
