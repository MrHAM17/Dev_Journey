<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearAlbumDetails"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;black_900&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_left"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_left"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTransfer"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/lbl_wunder_king"
                style="@style/txtRobotomedium20" tools:text="@string/lbl_wunder_king"/>
            <ImageView android:id="@+id/imageMegaphone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_megaphone"
                tools:ignore="ContentDescription" tools:src="@drawable/img_megaphone"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearThumbnail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_14pxv">
            <LinearLayout android:id="@+id/linearSongDetail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <ImageView android:id="@+id/imageThumbnail"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_100pxh"
                    android:layout_width="@dimen/_100pxh"
                    android:scaleType="fitXY"
                    imageRes="@{@drawable/img_thumbnail_100x100}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_100x100"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtWunderKing"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_wunder_king"
                    style="@style/txtRobotomedium28" tools:text="@string/lbl_wunder_king"/>
                <LinearLayout android:gravity="center_vertical"
                    android:id="@+id/linearSixtyEight"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtWidget"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@string/lbl"
                        style="@style/txtRobotoregular16" tools:text="@string/lbl"/>
                    <View
                        android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_0_58_radius_1"
                        android:id="@+id/viewBackground"
                        android:layout_height="@dimen/_3pxh" android:layout_width="@dimen/_3pxh"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtZipcode"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@string/lbl_2018"
                        style="@style/txtRobotoregular16" tools:text="@string/lbl_2018"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearActions"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_0_3_radius_19"
                    android:id="@+id/btnQuestion"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_38pxh"
                    android:layout_width="@dimen/_38pxh"
                    android:paddingHorizontal="@dimen/_8pxh"
                    android:paddingVertical="@dimen/_8pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_question" tools:ignore="ContentDescription"/>
                <ImageButton android:id="@+id/btnOverflowMenu"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_69pxh"
                    android:layout_width="@dimen/_69pxh"
                    android:scaleType="fitCenter" tools:ignore="ContentDescription"/>
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_onprimarycontainer_opacity_0_3_radius_19"
                    android:id="@+id/btnBookmark"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_38pxh"
                    android:layout_width="@dimen/_38pxh"
                    android:paddingHorizontal="@dimen/_7pxh"
                    android:paddingVertical="@dimen/_7pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_bookmark_onprimarycontainer" tools:ignore="ContentDescription"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerSongsList"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_19pxh}" tools:itemCount="4" tools:listitem="@layout/row_songslist"/>
        </LinearLayout>
    </LinearLayout>
</layout>
