<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearFavouritesOption"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_16pxv"
        android:paddingEnd="@dimen/_18pxh"
        android:paddingStart="@dimen/_18pxh"
        android:paddingTop="@dimen/_16pxv" style="@style/groupStyle{&quot;name&quot;:&quot;primaryContainer&quot;}cornerRadius">
        <ImageView android:id="@+id/imageTracks"
            android:layout_height="@dimen/_24pxh"
            android:layout_width="@dimen/_24pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_icons_onprimarycontainer_24x24"
            tools:ignore="ContentDescription" tools:src="@drawable/img_icons_onprimarycontainer_24x24"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtAddToPlaylist"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true" android:text="@string/lbl_tracks"
            style="@style/txtRobotoregular16" tools:text="@string/lbl_tracks"/>
    </LinearLayout>
</layout>
