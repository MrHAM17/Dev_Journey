<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="resetPasswordVerifyCodeVM" type="com.helthiotelehealth.app.modules.resetpasswordverifycode.data.viewmodel.ResetPasswordVerifyCodeVM"/>
    </data>
    <LinearLayout android:id="@+id/linearResetPassword"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageIconChevronLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_icon_chevron_left_onprimary"
                tools:ignore="ContentDescription" tools:src="@drawable/img_icon_chevron_left_onprimary"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearOtpView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_42pxv"
            android:paddingEnd="@dimen/_23pxh"
            android:paddingStart="@dimen/_23pxh" android:paddingTop="@dimen/_42pxv">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearTitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEnterVerification"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{resetPasswordVerifyCodeVM.resetPasswordVerifyCodeModel.txtEnterVerification}"
                    style="@style/txtRalewaybold24" tools:text="@string/msg_enter_verification"/>
                <TextView android:id="@+id/txtEnterCodeThat"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{resetPasswordVerifyCodeVM.resetPasswordVerifyCodeModel.txtEnterCodeThat}"
                    style="@style/txtRalewaymedium16_1" tools:text="@string/msg_enter_code_that"/>
            </LinearLayout>
            <com.mukesh.OtpView android:focusableInTouchMode="true"
                android:id="@+id/otpViewOtpView"
                android:inputType="number"
                android:itemBackground="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/{&quot;name&quot;:&quot;onPrimary&quot;}"
                android:textSize="@dimen/_24pxh" app:OtpItemCount="4"
                app:OtpItemHeight="@dimen/_64pxv"
                app:OtpItemSpacing="@dimen/_24pxh"
                app:OtpItemWidth="@dimen/_64pxh"
                app:OtpLineColor="@color/{&quot;name&quot;:&quot;primary&quot;}" app:OtpViewType="rectangle"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_tl_8_bl_8_br_8"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:gravity="center" android:id="@+id/btnVerify"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_56pxv"
                android:layout_width="@dimen/_327pxh"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_18pxv"
                android:singleLine="true"
                android:text="@string/lbl_verify"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_verify"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearResendLink"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtDidnTReceiveThe"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{resetPasswordVerifyCodeVM.resetPasswordVerifyCodeModel.txtDidnTReceiveThe}"
                    style="@style/txtRalewayregular14_1" tools:text="@string/msg_didn_t_receive_the"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtResend"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{resetPasswordVerifyCodeVM.resetPasswordVerifyCodeModel.txtResend}"
                    style="@style/txtRalewaysemibold14_1" tools:text="@string/lbl_resend"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
