<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="messageHistoryTabContainerVM" type="com.helthiotelehealth.app.modules.messagehistorytabcontainer.data.viewmodel.MessageHistoryTabContainerVM"/>
    </data>
    <FrameLayout android:id="@+id/frameMessage"
        android:layout_height="match_parent" android:layout_width="match_parent">
        <LinearLayout android:id="@+id/linearMessage"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
            <androidx.appcompat.widget.Toolbar
                android:gravity="center_horizontal"
                android:id="@+id/toolbarAppBar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtMessage"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{messageHistoryTabContainerVM.messageHistoryTabContainerModel.txtMessage}"
                    style="@style/txtRalewaysemibold24" tools:text="@string/lbl_message"/>
                <FrameLayout android:id="@+id/frameGroup27"
                    android:layout_height="@dimen/_33pxv" android:layout_width="match_parent">
                    <ImageView android:id="@+id/imageRewind"
                        android:layout_gravity="top"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_rewind_onprimary"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rewind_onprimary"/>
                    <ImageView android:id="@+id/imageImage"
                        android:layout_gravity="bottom|end"
                        android:layout_height="@dimen/_16pxh"
                        android:layout_width="@dimen/_4pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_component_1"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_component_1"/>
                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout android:id="@+id/linearMessageHistory"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout
                    android:gravity="center_horizontal"
                    android:id="@+id/tabLayoutTabview"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:tabBackground="@drawable/selector_bg_name_primary_radius_8"
                    app:tabIndicatorColor="@android:color/transparent"
                    app:tabIndicatorHeight="0dp" app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                    app:tabTextColor="@color/{&quot;name&quot;:&quot;onPrimary&quot;}" style="@style/groupStyle{&quot;name&quot;:&quot;gray_100&quot;}cornerRadius"/>
                <androidx.viewpager2.widget.ViewPager2
                    android:gravity="center_horizontal"
                    android:id="@+id/viewPagerTabBarView"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:backgroundTint="@color/{&quot;name&quot;:&quot;primary&quot;}"
            android:id="@+id/floatingBtnFloatingActionButton"
            android:layout_gravity="bottom|end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:fabCustomSize="@dimen/_55pxh"
            app:srcCompat="@drawable/img_user_white_a700" app:tint="@color/{&quot;name&quot;:&quot;white_A700&quot;}"/>
    </FrameLayout>
</layout>
