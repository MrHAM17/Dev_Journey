<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="resetPasswordEmailTabContainerVM" type="com.helthiotelehealth.app.modules.resetpasswordemailtabcontainer.data.viewmodel.ResetPasswordEmailTabContainerVM"/>
    </data>
    <LinearLayout android:id="@+id/linearIconChevronLeft"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageIconChevronLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_icon_chevron_left_onprimary"
                tools:ignore="ContentDescription" tools:src="@drawable/img_icon_chevron_left_onprimary"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearForgotYourPassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingEnd="@dimen/_24pxh" android:paddingStart="@dimen/_24pxh">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtForgotYourPassword"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{resetPasswordEmailTabContainerVM.resetPasswordEmailTabContainerModel.txtForgotYourPassword}"
                    style="@style/txtRalewaybold24" tools:text="@string/msg_forgot_your_password"/>
                <TextView android:id="@+id/txtEnterYourEmail"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{resetPasswordEmailTabContainerVM.resetPasswordEmailTabContainerModel.txtEnterYourEmail}"
                    style="@style/txtRalewaymedium16_1" tools:text="@string/msg_enter_your_email2"/>
            </LinearLayout>
            <com.google.android.material.tabs.TabLayout
                android:gravity="center_horizontal"
                android:id="@+id/tabLayoutTabview"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:tabBackground="@drawable/selector_bg_name_white_a700_radius_8"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="0dp" app:tabMode="fixed"
                app:tabSelectedTextColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
                app:tabTextColor="@color/{&quot;name&quot;:&quot;blue_gray_400&quot;}" style="@style/groupStylenamegray_1"/>
            <androidx.viewpager2.widget.ViewPager2
                android:gravity="center_horizontal"
                android:id="@+id/viewPagerTabBarView"
                android:layout_height="match_parent"
                android:layout_weight="1" android:layout_width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</layout>
