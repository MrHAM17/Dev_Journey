<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="findDoctorsVM" type="com.helthiotelehealth.app.modules.finddoctors.data.viewmodel.FindDoctorsVM"/>
    </data>
    <LinearLayout android:id="@+id/linearIconChevronLeft"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageIconChevronLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_icon_chevron_left"
                tools:ignore="ContentDescription" tools:src="@drawable/img_icon_chevron_left"/>
            <TextView android:ellipsize="end" android:id="@+id/txtLogin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{findDoctorsVM.findDoctorsModel.txtLogin}"
                style="@style/txtRalewaysemibold18_1" tools:text="@string/lbl_find_doctors"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearFindDoctors"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_23pxv"
            android:paddingEnd="@dimen/_22pxh"
            android:paddingStart="@dimen/_22pxh" android:paddingTop="@dimen/_23pxv">
            <androidx.appcompat.widget.SearchView
                android:background="@drawable/rectangle_bg_name_white_a700_border_name_gray_300_radius_6"
                android:gravity="center_horizontal"
                android:id="@+id/searchViewSearch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:theme="@style/searchViewsearch"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                app:queryHint="@string/lbl_find_a_doctor" app:searchIcon="@drawable/img_rewind"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearCategories"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCategory"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{findDoctorsVM.findDoctorsModel.txtCategory}"
                    style="@style/txtRalewaysemibold18_1" tools:text="@string/lbl_category"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFindDoctors"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4" itemSpace="@{@dimen/_22pxh}"
                    tools:itemCount="7" tools:listitem="@layout/row_finddoctors"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRecommendedDoctors"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRecommendedDoctors"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{findDoctorsVM.findDoctorsModel.txtRecommendedDoctors}"
                    style="@style/txtRalewaysemibold18_1" tools:text="@string/msg_recommended_doctors"/>
                <LinearLayout android:id="@+id/linearDr"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_15pxv"
                    android:paddingTop="@dimen/_15pxv" style="@style/groupStylenamewhite_5">
                    <ImageView android:id="@+id/imageCircleImage"
                        android:layout_height="@dimen/_88pxh"
                        android:layout_width="@dimen/_88pxh"
                        android:scaleType="centerCrop"
                        circular="@{true}"
                        imageRes="@{@drawable/img_ellipse_88_88x88}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse_88_88x88"/>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearDrMarcusHorizon"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtDrMarcusHorizon"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{findDoctorsVM.findDoctorsModel.txtDrMarcusHorizon}"
                            style="@style/txtRalewaysemibold16_1" tools:text="@string/msg_dr_marcus_horizon"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtChardiologist"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{findDoctorsVM.findDoctorsModel.txtChardiologist}"
                            style="@style/txtRalewayregular14_3" tools:text="@string/lbl_chardiologist"/>
                        <View
                            android:background="@color/{&quot;name&quot;:&quot;gray_300&quot;}"
                            android:id="@+id/lineVectorThirtyFour"
                            android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_167pxh"/>
                        <LinearLayout android:id="@+id/linearSignal"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/linearSignal1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content" android:orientation="horizontal">
                                <ImageView android:id="@+id/imageSignal"
                                    android:layout_gravity="top"
                                    android:layout_height="@dimen/_16pxh"
                                    android:layout_width="@dimen/_16pxh"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_signal"
                                    tools:ignore="ContentDescription" tools:src="@drawable/img_signal"/>
                                <TextView android:ellipsize="end"
                                    android:id="@+id/txtFortySeven"
                                    android:layout_gravity="bottom"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:singleLine="true"
                                    android:text="@{findDoctorsVM.findDoctorsModel.txtFortySeven}"
                                    style="@style/txtRalewayromanmedium12" tools:text="@string/lbl_4_7"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:id="@+id/linearFifteen"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content" android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imageLinkedin"
                                    android:layout_gravity="top"
                                    android:layout_height="@dimen/_16pxh"
                                    android:layout_width="@dimen/_16pxh"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_linkedin_errorcontainer"
                                    tools:ignore="ContentDescription" tools:src="@drawable/img_linkedin_errorcontainer"/>
                                <TextView android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:id="@+id/txtDistance"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:singleLine="true"
                                    android:text="@{findDoctorsVM.findDoctorsModel.txtDistance}"
                                    style="@style/txtRalewaymedium14_3" tools:text="@string/lbl_800m_away"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearYourRecentDoctors"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/_24pxh" android:paddingStart="@dimen/_24pxh">
            <TextView android:ellipsize="end"
                android:id="@+id/txtYourRecentDoctors"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{findDoctorsVM.findDoctorsModel.txtYourRecentDoctors}"
                style="@style/txtRalewaysemibold18_1" tools:text="@string/msg_your_recent_doctors"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDoctors"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_24pxh}" tools:itemCount="4" tools:listitem="@layout/row_doctors"/>
        </LinearLayout>
    </LinearLayout>
</layout>
