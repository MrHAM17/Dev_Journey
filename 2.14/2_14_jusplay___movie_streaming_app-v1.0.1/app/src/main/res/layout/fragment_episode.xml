<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="episodeVM" type="com.jusplaymoviestreamingapp.app.modules.episode.data.viewmodel.EpisodeVM"/>
    </data>
    <LinearLayout android:id="@+id/linearTrailer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;black_900&quot;}">
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="bottom|center"
            android:id="@+id/recyclerEpisode"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            itemSpace="@{@dimen/_16pxh}" tools:itemCount="2" tools:listitem="@layout/row_episode"/>
    </LinearLayout>
</layout>
