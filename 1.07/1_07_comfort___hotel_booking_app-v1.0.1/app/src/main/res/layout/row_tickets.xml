<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearBookingItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20pxh"
        android:paddingVertical="@dimen/_20pxv" style="@style/groupStyle{&quot;name&quot;:&quot;blue_gray_900&quot;}cornerRadius">
        <LinearLayout android:id="@+id/linearHotelInfo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageBulgariResort"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_100pxh"
                android:layout_width="@dimen/_100pxh"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_16pxh}"
                imageRes="@{@drawable/img_rectangle}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearAutoLayoutVertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtBulgariResort"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_bulgari_resort"
                    style="@style/txtUrbanistsemibold22" tools:text="@string/lbl_bulgari_resort"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtParisFrance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_paris_france"
                    style="@style/txtUrbanistregular14" tools:text="@string/lbl_paris_france"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/rectangle_bg_name_teal_900_radius_6"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:gravity="center"
                    android:id="@+id/btnCompleted"
                    android:layout_height="@dimen/_24pxv"
                    android:layout_width="@dimen/_72pxh"
                    android:paddingBottom="@dimen/_5pxv"
                    android:paddingEnd="@dimen/_10pxh"
                    android:paddingStart="@dimen/_10pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_completed"
                    android:textAllCaps="false"
                    android:textColor="@color/{&quot;name&quot;:&quot;cyan_300&quot;}"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_10pxh"
                    android:textStyle="bold" tools:text="@string/lbl_completed"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearBookingStatus"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8pxv"
            android:paddingEnd="@dimen/_12pxh"
            android:paddingStart="@dimen/_12pxh"
            android:paddingTop="@dimen/_8pxv" style="@style/groupStyle{&quot;name&quot;:&quot;green_600_19&quot;}cornerRadius">
            <ImageView android:id="@+id/imageImage"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_18pxh"
                android:layout_width="@dimen/_18pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_checkmark"
                tools:ignore="ContentDescription" tools:src="@drawable/img_checkmark"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtYeayyouhavecompletedit"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/msg_yeay_you_have_completed"
                style="@style/txtUrbanistromanmedium10" tools:text="@string/msg_yeay_you_have_completed"/>
        </LinearLayout>
    </LinearLayout>
</layout>
