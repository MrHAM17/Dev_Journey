<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="favoriteRowModel" type="com.streetstyleecommerceapp.app.modules.favorite.data.model.FavoriteRowModel"/>
    </data>
    <LinearLayout android:gravity="start" android:id="@+id/linearCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <ImageView android:id="@+id/imageBoxTee"
            android:layout_height="@dimen/_180pxh"
            android:layout_width="@dimen/_175pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_30pxh}"
            imageRes="@{@drawable/img_rectangle_12}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle_12"/>
        <TextView android:ellipsize="end" android:id="@+id/txtBoxTee"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{favoriteRowModel.txtBoxTee}"
            style="@style/txtPlayfairDisplayplayfairdisplaymedium16_2" tools:text="@string/lbl_box_tee"/>
    </LinearLayout>
</layout>
