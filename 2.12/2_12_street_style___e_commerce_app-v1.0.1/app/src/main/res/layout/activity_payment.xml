<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="paymentVM" type="com.streetstyleecommerceapp.app.modules.payment.data.viewmodel.PaymentVM"/>
    </data>
    <LinearLayout android:id="@+id/linearThirtyFour"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;gray_300_01&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_down"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_down"/>
            <LinearLayout android:id="@+id/linearGroup22"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageSearch"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_search"/>
                <ImageView android:id="@+id/imageImage"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_86"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group_86"/>
                <ImageView android:id="@+id/imageImage1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_84"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group_84"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearPayment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_29pxv" android:paddingTop="@dimen/_29pxv">
            <TextView android:ellipsize="end"
                android:id="@+id/txtPayment"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{paymentVM.paymentModel.txtPayment}"
                style="@style/txtPlayfairDisplayitalicregular40" tools:text="@string/lbl_payment"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearEighteen"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtMyCards"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{paymentVM.paymentModel.txtMyCards}"
                    style="@style/txtPlayfairDisplayplayfairdisplaymedium22" tools:text="@string/lbl_my_cards"/>
                <com.asksira.loopingviewpager.LoopingViewPager
                    android:gravity="end"
                    android:id="@+id/imageSliderCard"
                    android:layout_height="@dimen/_195pxv"
                    android:layout_width="match_parent"
                    app:autoScroll="true" app:isInfinite="true" app:scrollInterval="5000"/>
                <ImageButton
                    android:background="@drawable/rectangle_border_name_gray_600_02_radius_25"
                    android:id="@+id/btnPlus"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_74pxh"
                    android:layout_width="@dimen/_50pxh"
                    android:paddingHorizontal="@dimen/_14pxh"
                    android:paddingVertical="@dimen/_14pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_plus_black_900_01" tools:ignore="ContentDescription"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/frameThirtyTwo"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_214pxv" android:layout_width="@dimen/_413pxh">
                <LinearLayout android:id="@+id/linearSixtySeven"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPaymentOption"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{paymentVM.paymentModel.txtPaymentOption}"
                        style="@style/txtPlayfairDisplayplayfairdisplaymedium22" tools:text="@string/lbl_payment_option"/>
                    <EditText
                        android:background="@drawable/rectangle_border_name_gray_600_02_radius_25"
                        android:ellipsize="end"
                        android:id="@+id/etApplePay"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@={paymentVM.paymentModel.etApplePayValue}" tools:ignore="Autofill"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearSeventy"
                    android:layout_gravity="bottom|center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_36pxh"
                    android:paddingStart="@dimen/_36pxh"
                    android:paddingTop="@dimen/_11pxv" style="@style/groupStyle_1">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtTotal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{paymentVM.paymentModel.txtTotal}"
                        style="@style/txtPlayfairDisplayplayfairdisplaymedium36_1" tools:text="@string/lbl_total"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{paymentVM.paymentModel.txtPrice}"
                        style="@style/txtPlayfairDisplayplayfairdisplaymedium36_1" tools:text="@string/lbl_116"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;black_900&quot;}">
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtAddToCart"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{paymentVM.paymentModel.txtAddToCart}"
                style="@style/txtPlayfairDisplayplayfairdisplaybold22" tools:text="@string/lbl_payment"/>
            <ImageView android:id="@+id/imageArrowLeft"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_13pxh"
                android:layout_width="@dimen/_91pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_left"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_left"/>
        </LinearLayout>
    </LinearLayout>
</layout>
