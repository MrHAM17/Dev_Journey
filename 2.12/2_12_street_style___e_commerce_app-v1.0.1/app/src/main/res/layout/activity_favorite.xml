<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="favoriteVM" type="com.streetstyleecommerceapp.app.modules.favorite.data.viewmodel.FavoriteVM"/>
    </data>
    <LinearLayout android:id="@+id/linearFortySeven"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;gray_300_01&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_down"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_down"/>
            <LinearLayout android:id="@+id/linearGroup13"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageSearch"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_search"/>
                <ImageView android:id="@+id/imageImage"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_86"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group_86"/>
                <ImageView android:id="@+id/imageImage1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_84"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group_84"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollView"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearFavorite"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFavorite"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{favoriteVM.favoriteModel.txtFavorite}"
                    style="@style/txtPlayfairDisplayitalicregular40" tools:text="@string/lbl_favorite"/>
                <LinearLayout android:id="@+id/linearCoupon"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_32pxv"
                    android:paddingEnd="@dimen/_100pxh"
                    android:paddingStart="@dimen/_100pxh"
                    android:paddingTop="@dimen/_32pxv" style="@style/groupStyle">
                    <TextView android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:id="@+id/txtCoupon"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{favoriteVM.favoriteModel.txtCoupon}"
                        style="@style/txtPlayfairDisplayplayfairdisplayextrabold36" tools:text="@string/lbl_coupon"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearEleven"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:gravity="center_horizontal"
                        android:id="@+id/recyclerFavorite"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2" itemSpace="@{@dimen/_16pxh}"
                        tools:itemCount="4" tools:listitem="@layout/row_favorite"/>
                    <LinearLayout android:gravity="center_vertical"
                        android:id="@+id/linearEightyTwo"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearCard3"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="vertical">
                            <ImageView android:id="@+id/imageImage2"
                                android:layout_height="@dimen/_180pxh"
                                android:layout_width="@dimen/_175pxh"
                                android:scaleType="fitXY"
                                cornerRadius="@{@dimen/_30pxh}"
                                imageRes="@{@drawable/img_rectangle_12_3}"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle_12_3"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtBoxTee"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="@{favoriteVM.favoriteModel.txtBoxTee}"
                                style="@style/txtPlayfairDisplayplayfairdisplaymedium16_2" tools:text="@string/lbl_box_tee"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearCard2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="vertical">
                            <ImageView android:id="@+id/imageImage3"
                                android:layout_height="@dimen/_180pxh"
                                android:layout_width="@dimen/_175pxh"
                                android:scaleType="fitXY"
                                cornerRadius="@{@dimen/_30pxh}"
                                imageRes="@{@drawable/img_rectangle_12_4}"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle_12_4"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtBoxTee1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="@{favoriteVM.favoriteModel.txtBoxTee1}"
                                style="@style/txtPlayfairDisplayplayfairdisplaymedium16_2" tools:text="@string/lbl_box_tee"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
