<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="orderstatusRowModel" type="com.fashionistaecommerceapp.app.modules.orderstatus.data.model.OrderstatusRowModel"/>
    </data>
    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearOrderReceived"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageOrderReceived"
            android:layout_height="@dimen/_88pxh"
            android:layout_width="@dimen/_8pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_settings"
            tools:ignore="ContentDescription" tools:src="@drawable/img_settings"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearFrame1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtOrderReceived"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{orderstatusRowModel.txtOrderReceived}"
                style="@style/txtPoppinsregular18" tools:text="@string/lbl_order_received"/>
            <LinearLayout android:id="@+id/linearFrame2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageImage"
                    android:layout_gravity="top"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_width="@dimen/_16pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_coco_line_clock"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_coco_line_clock"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtTime"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{orderstatusRowModel.txtTime}"
                    style="@style/txtPoppinsmedium12" tools:text="@string/msg_05_48_pm_7_june"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
