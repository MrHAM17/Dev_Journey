<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="writeAReviewVM" type="com.fashionistaecommerceapp.app.modules.writeareview.data.viewmodel.WriteAReviewVM"/>
    </data>
    <LinearLayout android:id="@+id/linearInputFields"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageButton
                android:background="@drawable/rectangle_bg_name_gray_200_radius_20"
                android:id="@+id/btnArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrow_down" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtLetSSignIn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{writeAReviewVM.writeAReviewModel.txtLetSSignIn}"
                style="@style/txtPoppinsmedium18" tools:text="@string/lbl_write_a_review"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearWriteAReview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_24pxv"
            android:paddingEnd="@dimen/_16pxh"
            android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_24pxv">
            <LinearLayout android:id="@+id/linearFrame"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageUnsplashHqPXTToMnZero"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_135pxh"
                    android:layout_width="@dimen/_142pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_20pxh}"
                    imageRes="@{@drawable/img_unsplash_8hqpxttomn0_135x142}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_unsplash_8hqpxttomn0_135x142"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearFrame1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtJacket"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{writeAReviewVM.writeAReviewModel.txtJacket}"
                        style="@style/txtPoppinsmedium18" tools:text="@string/lbl_jacket"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtBlackJacket"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{writeAReviewVM.writeAReviewModel.txtBlackJacket}"
                        style="@style/txtPoppinsregular16" tools:text="@string/lbl_black_jacket"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSizeXL"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{writeAReviewVM.writeAReviewModel.txtSizeXL}"
                        style="@style/txtPoppinsregular14_2" tools:text="@string/lbl_size_xl"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{writeAReviewVM.writeAReviewModel.txtPrice}"
                        style="@style/txtPoppinssemibold18" tools:text="@string/lbl_134_98"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearFrame2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAddPhotoOrVideo"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{writeAReviewVM.writeAReviewModel.txtAddPhotoOrVideo}"
                    style="@style/txtPoppinsmedium18" tools:text="@string/msg_add_photo_or_video"/>
                <LinearLayout android:id="@+id/linearCloudUpload"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_21pxv"
                    android:paddingEnd="@dimen/_99pxh"
                    android:paddingStart="@dimen/_99pxh"
                    android:paddingTop="@dimen/_21pxv" style="@style/groupStylenamewhite_4">
                    <ImageView android:id="@+id/imageCloudUpload"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_50pxh"
                        android:layout_width="@dimen/_50pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_cloud_upload"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_cloud_upload"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtClickHereToUpload"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{writeAReviewVM.writeAReviewModel.txtClickHereToUpload}"
                        style="@style/txtPoppinsregular14_2" tools:text="@string/msg_click_here_to_upload"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearTwentyEight"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtWriteYorReview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{writeAReviewVM.writeAReviewModel.txtWriteYorReview}"
                    style="@style/txtPoppinsmedium18" tools:text="@string/msg_write_yor_review"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_gray_200_radius_10"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/msg_would_you_like_to"
                    android:id="@+id/etInputFields"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_14pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_14pxv"
                    android:singleLine="true"
                    android:text="@={writeAReviewVM.writeAReviewModel.etInputFieldsValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;gray_500&quot;}"
                    android:textColorHint="@color/{&quot;name&quot;:&quot;gray_500&quot;}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="normal" tools:ignore="Autofill"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtCharactersremaining"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{writeAReviewVM.writeAReviewModel.txtCharactersremaining}"
                style="@style/txtPoppinsregular14_2" tools:text="@string/msg_350_characters_remaining"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rectangle_bg_name_primary_radius_10"
            android:ellipsize="end" android:fontFamily="@font/poppins"
            android:gravity="center" android:id="@+id/btnPostReview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_14pxv" android:singleLine="true"
            android:text="@string/lbl_post_review"
            android:textAllCaps="false"
            android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
            android:textFontWeight="500"
            android:textSize="@dimen/_16pxh" android:textStyle="bold" tools:text="@string/lbl_post_review"/>
    </LinearLayout>
</layout>
