<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="productViewVM" type="com.fashionistaecommerceapp.app.modules.productview.data.viewmodel.ProductViewVM"/>
    </data>
    <LinearLayout android:id="@+id/linearAddToCart"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollView"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <FrameLayout android:id="@+id/frameAddToCart"
                android:layout_height="match_parent" android:layout_width="match_parent">
                <ImageView android:id="@+id/imageProduct"
                    android:layout_gravity="top|center"
                    android:layout_height="@dimen/_451pxv"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    imageRes="@{@drawable/img_product}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_product"/>
                <LinearLayout android:id="@+id/linearAddToCart1"
                    android:layout_gravity="bottom|center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_16pxh"
                    android:paddingVertical="@dimen/_16pxv" style="@style/groupStylecornerRadius">
                    <LinearLayout android:id="@+id/linearFrame"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtBlackJacket"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@{productViewVM.productViewModel.txtBlackJacket}"
                            style="@style/txtPoppinssemibold20" tools:text="@string/lbl_black_jacket"/>
                        <ImageButton
                            android:background="@drawable/rectangle_border_name_gray_200_radius_15"
                            android:id="@+id/btnIcon"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_42pxh"
                            android:layout_width="@dimen/_42pxh"
                            android:paddingHorizontal="@dimen/_9pxh"
                            android:paddingVertical="@dimen/_9pxv"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_icon_primary_42x42" tools:ignore="ContentDescription"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearOrderStatus"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtSelectSize"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@{productViewVM.productViewModel.txtSelectSize}"
                            style="@style/txtPoppinsmedium18" tools:text="@string/lbl_select_size"/>
                        <FrameLayout android:id="@+id/frameFrame"
                            android:layout_height="wrap_content" android:layout_width="match_parent">
                            <FrameLayout
                                android:background="@drawable/rectangle_border_name_gray_200_radius_7"
                                android:id="@+id/frameTabs"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_8pxv"
                                android:paddingEnd="@dimen/_16pxh"
                                android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_8pxv"/>
                            <FrameLayout
                                android:background="@drawable/rectangle_border_name_gray_200_radius_7"
                                android:id="@+id/frameTabs1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_8pxv"
                                android:paddingEnd="@dimen/_16pxh"
                                android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_8pxv"/>
                            <FrameLayout
                                android:background="@drawable/rectangle_bg_name_primary_radius_7"
                                android:id="@+id/frameTabs2"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_8pxv"
                                android:paddingEnd="@dimen/_16pxh"
                                android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_8pxv"/>
                            <FrameLayout
                                android:background="@drawable/rectangle_border_name_gray_200_radius_7"
                                android:id="@+id/frameTabs3"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_8pxv"
                                android:paddingEnd="@dimen/_16pxh"
                                android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_8pxv"/>
                            <FrameLayout
                                android:background="@drawable/rectangle_border_name_gray_200_radius_7"
                                android:id="@+id/frameTabs4"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_8pxv"
                                android:paddingEnd="@dimen/_16pxh"
                                android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_8pxv"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearFrame1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtColor"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@{productViewVM.productViewModel.txtColor}"
                            style="@style/txtPoppinsmedium18" tools:text="@string/lbl_color"/>
                        <ImageView android:id="@+id/imageImage"
                            android:layout_height="@dimen/_50pxh"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_frame_1035"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_frame_1035"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/linearSeven"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <LinearLayout android:id="@+id/linearFrame2"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtReviews"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="@{productViewVM.productViewModel.txtReviews}"
                                style="@style/txtPoppinsmedium18" tools:text="@string/lbl_reviews"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtSeeAll"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="@{productViewVM.productViewModel.txtSeeAll}"
                                style="@style/txtPoppinsmedium14_2" tools:text="@string/lbl_see_all"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/linearFrame3"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageImage1"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_24pxh"
                                android:layout_width="@dimen/_24pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_star_6"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_star_6"/>
                            <TextView android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:id="@+id/txtReviews1"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{productViewVM.productViewModel.txtReviews1}"
                                style="@style/txtPoppinssemibold16_1" tools:text="@string/msg_4_8_1_024_reviews"/>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/linearFrame4"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" android:orientation="horizontal">
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtPrice"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="@{productViewVM.productViewModel.txtPrice}"
                                style="@style/txtPoppinsbold20" tools:text="@string/lbl_134_98"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:background="@drawable/rectangle_bg_name_primary_radius_10"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:id="@+id/btnAddToCart"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_52pxv"
                                android:layout_width="@dimen/_170pxh"
                                android:paddingBottom="@dimen/_14pxv"
                                android:paddingEnd="@dimen/_30pxh"
                                android:paddingStart="@dimen/_30pxh"
                                android:paddingTop="@dimen/_14pxv"
                                android:singleLine="true"
                                android:text="@string/lbl_add_to_cart"
                                android:textAllCaps="false"
                                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                                android:textFontWeight="500"
                                android:textSize="@dimen/_16pxh"
                                android:textStyle="bold" tools:text="@string/lbl_add_to_cart"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</layout>
