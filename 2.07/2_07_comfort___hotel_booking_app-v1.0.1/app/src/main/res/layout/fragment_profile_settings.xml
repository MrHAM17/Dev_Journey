<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="profileSettingsVM" type="com.comforthotelbookingapp.app.modules.profilesettings.data.viewmodel.ProfileSettingsVM"/>
    </data>
    <LinearLayout android:id="@+id/linearFloatingIcon"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onPrimary&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageButton android:id="@+id/btnFloatingIcon"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_floating_icon_white_a700" tools:ignore="ContentDescription"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtComfort"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{profileSettingsVM.profileSettingsModel.txtComfort}"
                style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_profile"/>
            <ImageButton android:id="@+id/btnSettings"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_settings_white_a700" tools:ignore="ContentDescription"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearProfileSettings"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_30pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_30pxv">
            <LinearLayout android:id="@+id/linearProfile"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <FrameLayout android:id="@+id/frameTypeEditAvatar"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_120pxv" android:layout_width="@dimen/_120pxh">
                    <ImageView android:id="@+id/imageCircleImage"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_120pxh"
                        android:layout_width="@dimen/_120pxh"
                        android:scaleType="centerCrop"
                        circular="@{true}"
                        imageRes="@{@drawable/img_ellipse_120x120}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse_120x120"/>
                    <ImageView android:id="@+id/imageEdit"
                        android:layout_gravity="bottom|end"
                        android:layout_height="@dimen/_30pxh"
                        android:layout_width="@dimen/_30pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_edit"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_edit"/>
                </FrameLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtDanielAustin"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtDanielAustin}"
                    style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_daniel_austin"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEmail"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtEmail}"
                    style="@style/txtUrbanistsemibold14" tools:text="@string/lbl_uder_domain_com"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearLock"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageLock"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_width="@dimen/_28pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_lock"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_lock"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtEditProfile"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtEditProfile}"
                    style="@style/txtUrbanistsemibold18" tools:text="@string/lbl_edit_profile"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearIconlyCurvedWallet"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageIconlyCurvedWallet"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_width="@dimen/_28pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_iconly_curved_wallet"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_iconly_curved_wallet"/>
                <TextView android:ellipsize="end"
                    android:gravity="bottom"
                    android:id="@+id/txtPayment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtPayment}"
                    style="@style/txtUrbanistsemibold18" tools:text="@string/lbl_payment"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearNotifications"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageImage"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_width="@dimen/_28pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_icons"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_icons"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtNotifications"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtNotifications}"
                    style="@style/txtUrbanistsemibold18" tools:text="@string/lbl_notifications"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearIconlyCurvedShield"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageIconlyCurvedShield"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_width="@dimen/_28pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_iconly_curved_shield"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_iconly_curved_shield"/>
                <TextView android:ellipsize="end"
                    android:gravity="bottom"
                    android:id="@+id/txtSecurity"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtSecurity}"
                    style="@style/txtUrbanistsemibold18" tools:text="@string/lbl_security"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearIconlyCurvedInfo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageIconlyCurvedInfo"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_width="@dimen/_28pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_iconly_curved_info"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_iconly_curved_info"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtHelp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtHelp}"
                    style="@style/txtUrbanistsemibold18" tools:text="@string/lbl_help"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearDarkTheme"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearDarkTheme1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageEye"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_28pxh"
                        android:layout_width="@dimen/_28pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye_white_a700_28x28"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_eye_white_a700_28x28"/>
                    <TextView android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/txtDarkTheme"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{profileSettingsVM.profileSettingsModel.txtDarkTheme}"
                        style="@style/txtUrbanistsemibold18" tools:text="@string/lbl_dark_theme"/>
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMaterialSWITCH"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearUser"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageUser"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_width="@dimen/_28pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user_red_400"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_user_red_400"/>
                <TextView android:ellipsize="end"
                    android:gravity="bottom" android:id="@+id/txtLogout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{profileSettingsVM.profileSettingsModel.txtLogout}"
                    style="@style/txtUrbanistsemibold18_1" tools:text="@string/lbl_logout"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
