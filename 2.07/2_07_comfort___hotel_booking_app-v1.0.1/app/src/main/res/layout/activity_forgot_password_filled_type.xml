<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="forgotPasswordFilledTypeVM" type="com.comforthotelbookingapp.app.modules.forgotpasswordfilledtype.data.viewmodel.ForgotPasswordFilledTypeVM"/>
    </data>
    <LinearLayout android:id="@+id/linearOtpView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onPrimary&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_down"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_down"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtForgotPassword"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{forgotPasswordFilledTypeVM.forgotPasswordFilledTypeModel.txtForgotPassword}"
                style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_forgot_password"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearForgotPassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/_34pxh" android:paddingStart="@dimen/_34pxh">
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtCodeHasBeenSend"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{forgotPasswordFilledTypeVM.forgotPasswordFilledTypeModel.txtCodeHasBeenSend}"
                style="@style/txtUrbanistregular16" tools:text="@string/msg_code_has_been_send"/>
            <com.mukesh.OtpView android:focusableInTouchMode="true"
                android:id="@+id/otpViewOtpView"
                android:inputType="number"
                android:itemBackground="@color/{&quot;name&quot;:&quot;blue_gray_900&quot;}"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:textSize="@dimen/_24pxh" app:OtpItemCount="4"
                app:OtpItemHeight="@dimen/_61pxv"
                app:OtpItemSpacing="@dimen/_16pxh"
                app:OtpItemWidth="@dimen/_78pxh"
                app:OtpLineColor="@color/{&quot;name&quot;:&quot;gray_700&quot;}" app:OtpViewType="rectangle"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtResendCodeInFiftyThree"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{forgotPasswordFilledTypeVM.forgotPasswordFilledTypeModel.txtResendCodeInFiftyThree}"
                style="@style/txtUrbanistregular16" tools:text="@string/msg_resend_code_in_53"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rectangle_bg_name_primary_radius_27"
            android:ellipsize="end" android:fontFamily="@font/urbanist"
            android:gravity="center" android:id="@+id/btnVerify"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_54pxv"
            android:layout_width="@dimen/_380pxh"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv" android:singleLine="true"
            android:text="@string/lbl_verify"
            android:textAllCaps="false"
            android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
            android:textFontWeight="700"
            android:textSize="@dimen/_16pxh" android:textStyle="bold" tools:text="@string/lbl_verify"/>
    </LinearLayout>
</layout>
