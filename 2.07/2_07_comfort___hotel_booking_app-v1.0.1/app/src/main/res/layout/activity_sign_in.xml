<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signInVM" type="com.comforthotelbookingapp.app.modules.signin.data.viewmodel.SignInVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSignIn"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onPrimary&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageImage"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_group"
                tools:ignore="ContentDescription" tools:src="@drawable/img_group"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearEmail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_47pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_47pxv">
            <TextView android:gravity="start"
                android:id="@+id/txtLoginToYourAccount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@{signInVM.signInModel.txtLoginToYourAccount}"
                style="@style/txtUrbanistromanbold48" tools:text="@string/msg_login_to_your_account"/>
            <LinearLayout android:id="@+id/linearLogIn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <EditText
                    android:background="@drawable/rectangle_bg_name_blue_gray_900_radius_12"
                    android:drawablePadding="@dimen/_12pxh"
                    android:drawableStart="@drawable/img_checkmark_blue_gray_100"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:hint="@string/lbl_email"
                    android:id="@+id/etEmail" android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_21pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="@dimen/_21pxv"
                    android:singleLine="true"
                    android:text="@={signInVM.signInModel.etEmailValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_100&quot;}"
                    android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_100&quot;}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="normal" tools:ignore="Autofill"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_blue_gray_900_radius_12"
                    android:drawableEnd="@drawable/img_eye_blue_gray_100"
                    android:drawablePadding="@dimen/_30pxh"
                    android:drawableStart="@drawable/img_location"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:hint="@string/lbl_password"
                    android:id="@+id/etPassword"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_21pxv"
                    android:paddingEnd="@dimen/_20pxh"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="@dimen/_21pxv"
                    android:singleLine="true"
                    android:text="@={signInVM.signInModel.etPasswordValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_100&quot;}"
                    android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_100&quot;}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="normal" tools:ignore="Autofill"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:drawablePadding="@dimen/_13pxh"
                    android:drawableStart="@drawable/drawable_dhi_2"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:id="@+id/checkBoxRememberme"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_2pxv"
                    android:paddingTop="@dimen/_2pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_remember_me"
                    android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="bold" tools:text="@string/lbl_remember_me"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/rectangle_bg_name_primary_radius_27"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:gravity="center" android:id="@+id/btnSignIn"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_15pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_sign_in2"
                    android:textAllCaps="false"
                    android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold" tools:text="@string/lbl_sign_in2"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtForgotThePassword"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtForgotThePassword}"
                    style="@style/txtUrbanistsemibold16_1" tools:text="@string/msg_forgot_the_password"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearOrDivider"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <View
                    android:background="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
                    android:id="@+id/lineLine"
                    android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_96pxh"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtOrContinueWith"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtOrContinueWith}"
                    style="@style/txtUrbanistsemibold18_2" tools:text="@string/msg_or_continue_with"/>
                <View
                    android:background="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
                    android:id="@+id/lineLine1"
                    android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_96pxh"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearSocial"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <FrameLayout android:id="@+id/frameSocialMediaLogin"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_60pxv"
                    android:layout_width="@dimen/_88pxh"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_17pxv" style="@style/groupStylenameblue_gray_1">
                    <ImageView android:id="@+id/imageLogosFacebook"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_logosfacebook"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_logosfacebook"/>
                </FrameLayout>
                <FrameLayout android:id="@+id/frameSocialMediaLogin1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_60pxv"
                    android:layout_width="@dimen/_87pxh"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_17pxv" style="@style/groupStylenameblue_gray_1">
                    <ImageView android:id="@+id/imageImage1"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_frame"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_frame"/>
                </FrameLayout>
                <FrameLayout android:id="@+id/frameSocialMediaLogin2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_60pxv"
                    android:layout_width="@dimen/_88pxh"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingEnd="@dimen/_31pxh"
                    android:paddingStart="@dimen/_31pxh"
                    android:paddingTop="@dimen/_17pxv" style="@style/groupStylenameblue_gray_1">
                    <ImageView android:id="@+id/imageImage2"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_frame_white_a700"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_frame_white_a700"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearFortyTwo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end" android:gravity="top"
                    android:id="@+id/txtConfirmation"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtConfirmation}"
                    style="@style/txtUrbanistregular14_1" tools:text="@string/msg_don_t_have_an_account"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtSignUp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtSignUp}"
                    style="@style/txtUrbanistsemibold14_1" tools:text="@string/lbl_sign_up"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
