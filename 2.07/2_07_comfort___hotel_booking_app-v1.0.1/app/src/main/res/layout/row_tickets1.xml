<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="tickets1RowModel" type="com.comforthotelbookingapp.app.modules.bookingongoing.data.model.Tickets1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearTicketsItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20pxh"
        android:paddingVertical="@dimen/_20pxv" style="@style/groupStyle{&quot;name&quot;:&quot;blue_gray_900&quot;}cornerRadius">
        <FrameLayout android:id="@+id/frameHotelDetails"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_100pxv" android:layout_width="@dimen/_332pxh">
            <TextView android:ellipsize="end"
                android:gravity="top|start"
                android:id="@+id/txtRoyalePresident"
                android:layout_gravity="top|end"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{tickets1RowModel.txtRoyalePresident}"
                style="@style/txtUrbanistsemibold22" tools:text="@string/msg_royale_president"/>
            <LinearLayout android:id="@+id/linearPaid1"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageImage"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_100pxh"
                    android:layout_width="@dimen/_100pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_16pxh}"
                    imageRes="@{@drawable/img_rectangle}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearPaid2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtParisFrance"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{tickets1RowModel.txtParisFrance}"
                        style="@style/txtUrbanistregular14" tools:text="@string/lbl_paris_france"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/rectangle_bg_name_teal_900_radius_6"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:gravity="center"
                        android:id="@+id/btnPaid"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_5pxv"
                        android:paddingEnd="@dimen/_20pxh"
                        android:paddingStart="@dimen/_20pxh"
                        android:paddingTop="@dimen/_5pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_paid"
                        android:textAllCaps="false"
                        android:textColor="@color/{&quot;name&quot;:&quot;cyan_300&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_10pxh"
                        android:textStyle="bold" tools:text="@string/lbl_paid"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearBookingAction"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_border_name_primary_radius_19"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist"
                android:gravity="center"
                android:id="@+id/btnCancelBooking"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_38pxv"
                android:layout_width="@dimen/_164pxh"
                android:paddingBottom="@dimen/_9pxv"
                android:paddingEnd="@dimen/_27pxh"
                android:paddingStart="@dimen/_27pxh"
                android:paddingTop="@dimen/_9pxv"
                android:singleLine="true"
                android:text="@string/lbl_cancel_booking"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_cancel_booking"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_19"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist"
                android:gravity="center" android:id="@+id/btnViewTicket"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_38pxv"
                android:layout_width="@dimen/_164pxh"
                android:paddingBottom="@dimen/_9pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_9pxv"
                android:singleLine="true"
                android:text="@string/lbl_view_ticket"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_view_ticket"/>
        </LinearLayout>
    </LinearLayout>
</layout>
