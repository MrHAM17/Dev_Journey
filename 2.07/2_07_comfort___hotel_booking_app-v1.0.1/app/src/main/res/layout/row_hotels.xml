<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="hotelsRowModel" type="com.comforthotelbookingapp.app.modules.homescreen.data.model.HotelsRowModel"/>
    </data>
    <FrameLayout android:id="@+id/frameFortyEight"
        android:layout_height="wrap_content" android:layout_width="@dimen/_300pxh">
        <ImageView android:id="@+id/imageImage1"
            android:layout_gravity="center"
            android:layout_height="@dimen/_400pxh"
            android:layout_width="@dimen/_300pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_36pxh}"
            imageRes="@{@drawable/img_rectangle_3}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle_3"/>
        <LinearLayout android:id="@+id/linearFortyEight"
            android:layout_gravity="bottom|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_16"
                android:drawablePadding="@dimen/_8pxh"
                android:drawableStart="@drawable/img_signal"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist"
                android:gravity="center" android:id="@+id/btnFortyEight"
                android:layout_gravity="end"
                android:layout_height="@dimen/_32pxv"
                android:layout_width="@dimen/_71pxh"
                android:paddingBottom="@dimen/_7pxv"
                android:paddingEnd="@dimen/_16pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_7pxv"
                android:singleLine="true" android:text="@string/lbl_4_8"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_14pxh"
                android:textStyle="bold" tools:text="@string/lbl_4_8"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearFour"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_32pxh"
                android:paddingStart="@dimen/_32pxh"
                android:paddingTop="@dimen/_21pxv" style="@style/groupStylecornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEmeraldaDeHotel"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{hotelsRowModel.txtEmeraldaDeHotel}"
                    style="@style/txtUrbanistromanbold24" tools:text="@string/msg_emeralda_de_hotel"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtParisFrance"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{hotelsRowModel.txtParisFrance}"
                    style="@style/txtUrbanistregular16" tools:text="@string/lbl_paris_france"/>
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{hotelsRowModel.txtPrice}"
                        style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_29"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPerNight"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{hotelsRowModel.txtPerNight}"
                        style="@style/txtUrbanistregular14_2" tools:text="@string/lbl_per_night"/>
                    <FrameLayout android:id="@+id/frameSpacer"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <ImageView android:id="@+id/imageImage2"
                        android:layout_height="@dimen/_28pxh"
                        android:layout_width="@dimen/_28pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_bookmark"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_bookmark"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
