<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="confirmPaymentVM" type="com.comforthotelbookingapp.app.modules.confirmpayment.data.viewmodel.ConfirmPaymentVM"/>
    </data>
    <LinearLayout android:id="@+id/linearConfirmPayment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onPrimary&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_down"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_down"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtFillYourProfile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{confirmPaymentVM.confirmPaymentModel.txtFillYourProfile}"
                style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_payment"/>
            <ImageView android:id="@+id/imageTelevision"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_television"
                tools:ignore="ContentDescription" tools:src="@drawable/img_television"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearConfirmPayment1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_23pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_23pxv">
            <LinearLayout android:gravity="spaceAround"
                android:id="@+id/linearResortDetails"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_20pxv"
                android:paddingTop="@dimen/_20pxv" style="@style/groupStyle{&quot;name&quot;:&quot;blue_gray_900&quot;}cornerRadius">
                <LinearLayout android:id="@+id/linearFiftyNine"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageImage"
                        android:layout_height="@dimen/_100pxh"
                        android:layout_width="@dimen/_100pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_16pxh}"
                        imageRes="@{@drawable/img_rectangle_4_2}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle_4_2"/>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearHotelDetails"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPresidentHotel"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{confirmPaymentVM.confirmPaymentModel.txtPresidentHotel}"
                            style="@style/txtUrbanistromanbold22" tools:text="@string/lbl_bulgari_resort"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtParisFrance"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{confirmPaymentVM.confirmPaymentModel.txtParisFrance}"
                            style="@style/txtUrbanistregular14" tools:text="@string/lbl_paris_france"/>
                        <LinearLayout
                            android:id="@+id/linearAutoLayoutHorizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageSignal"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_12pxh"
                                android:layout_width="@dimen/_12pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_signal_yellow_a700"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_signal_yellow_a700"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtFortyEight"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="@{confirmPaymentVM.confirmPaymentModel.txtFortyEight}"
                                style="@style/txtUrbanistsemibold14_1" tools:text="@string/lbl_4_8"/>
                            <TextView android:ellipsize="end"
                                android:gravity="bottom"
                                android:id="@+id/txtReviews"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{confirmPaymentVM.confirmPaymentModel.txtReviews}"
                                style="@style/txtUrbanistregular12" tools:text="@string/lbl_4_378_reviews"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtPrice}"
                        style="@style/txtUrbanistromanbold24_1" tools:text="@string/lbl_27"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtNight"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtNight}"
                        style="@style/txtUrbanistromanmedium10_1" tools:text="@string/lbl_night"/>
                    <ImageView android:id="@+id/imageBookmark"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_bookmark_primary"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_bookmark_primary"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearBookingDetails"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_24pxh"
                android:paddingStart="@dimen/_24pxh"
                android:paddingTop="@dimen/_21pxv" style="@style/groupStylenameblue_gray_6">
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCheckIn"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtCheckIn}"
                        style="@style/txtUrbanistsemibold16_2" tools:text="@string/lbl_check_in"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtMonth"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtMonth}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/msg_december_16_2024"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCheckOut"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtCheckOut}"
                        style="@style/txtUrbanistsemibold16_2" tools:text="@string/lbl_check_out"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtMonth1"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtMonth1}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/msg_december_20_2024"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtGuest"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtGuest}"
                        style="@style/txtUrbanistsemibold16_2" tools:text="@string/lbl_guest"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtThree"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtThree}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_3"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearPrice1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_24pxh"
                android:paddingStart="@dimen/_24pxh"
                android:paddingTop="@dimen/_21pxv" style="@style/groupStylenameblue_gray_6">
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtNightsCounter"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtNightsCounter}"
                        style="@style/txtUrbanistsemibold16_2" tools:text="@string/lbl_5_nights"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice1"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtPrice1}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_435_00"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtTaxesFeesTen"
                        android:layout_gravity="top"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtTaxesFeesTen}"
                        style="@style/txtUrbanistsemibold16_2" tools:text="@string/msg_taxes_fees_10"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice2"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtPrice2}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_44_50"/>
                </LinearLayout>
                <View
                    android:background="@color/{&quot;name&quot;:&quot;gray_700&quot;}"
                    android:id="@+id/lineLine"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_332pxh"/>
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal6"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtTotal"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtTotal}"
                        style="@style/txtUrbanistsemibold16_2" tools:text="@string/lbl_total"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice3"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtPrice3}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_479_50"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearPaymentMethod"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_26pxv"
                android:paddingEnd="@dimen/_24pxh"
                android:paddingStart="@dimen/_24pxh"
                android:paddingTop="@dimen/_26pxv" style="@style/groupStylenameblue_gray_6">
                <LinearLayout
                    android:id="@+id/linearAutoLayoutHorizontal7"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageImage1"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_27pxh"
                        android:layout_width="@dimen/_44pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_4pxh}"
                        imageRes="@{@drawable/img_image_27x44}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_image_27x44"/>
                    <TextView android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/txtText"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtText}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/msg"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtChange"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{confirmPaymentVM.confirmPaymentModel.txtChange}"
                    style="@style/txtUrbanistsemibold16_1" tools:text="@string/lbl_change"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rectangle_bg_name_primary_radius_27"
            android:ellipsize="end" android:fontFamily="@font/urbanist"
            android:gravity="center" android:id="@+id/btnConfirmPayment"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_54pxv"
            android:layout_width="@dimen/_380pxh"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv" android:singleLine="true"
            android:text="@string/lbl_confirm_payment"
            android:textAllCaps="false"
            android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
            android:textFontWeight="700"
            android:textSize="@dimen/_16pxh" android:textStyle="bold" tools:text="@string/lbl_confirm_payment"/>
    </LinearLayout>
</layout>
