<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearMovieCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <ImageView android:id="@+id/imageDarkTower"
            android:layout_height="@dimen/_140pxh"
            android:layout_width="@dimen/_98pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_2pxh}"
            imageRes="@{@drawable/img_thumbnail_image_140x98}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_image_140x98"/>
        <TextView android:ellipsize="end" android:id="@+id/txtTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@string/lbl_dark_tower"
            style="@style/txtRobotoregular12_1" tools:text="@string/lbl_dark_tower"/>
    </LinearLayout>
</layout>
