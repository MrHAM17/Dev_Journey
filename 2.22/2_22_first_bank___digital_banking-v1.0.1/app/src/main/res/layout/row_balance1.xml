<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="balance1RowModel" type="com.firstbankdigitalbanking.app.modules.transactions.data.model.Balance1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;primary&quot;}cornerRadius">
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearFrame"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearBalance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtBalance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{balance1RowModel.txtBalance}"
                    style="@style/txtIntermedium10" tools:text="@string/lbl_balance"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{balance1RowModel.txtPrice}"
                    style="@style/txtIntersemibold16_1" tools:text="@string/lbl_5_756"/>
            </LinearLayout>
            <ImageView android:id="@+id/imageBalance"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_29pxh"
                android:layout_width="@dimen/_29pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_chip_card"
                tools:ignore="ContentDescription" tools:src="@drawable/img_chip_card"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearCARDHOLDER1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearCARDHOLDER2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCARDHOLDER"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{balance1RowModel.txtCARDHOLDER}"
                    style="@style/txtIntermedium10" tools:text="@string/lbl_card_holder"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEddyCusuma"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{balance1RowModel.txtEddyCusuma}"
                    style="@style/txtIntersemibold14_1" tools:text="@string/lbl_eddy_cusuma"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearNumberDayMonth"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtVALIDTHRU"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{balance1RowModel.txtVALIDTHRU}"
                    style="@style/txtIntermedium10" tools:text="@string/lbl_valid_thru"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtOneThousandTwoHundredTwentyTwo"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{balance1RowModel.txtOneThousandTwoHundredTwentyTwo}"
                    style="@style/txtIntersemibold14_1" tools:text="@string/lbl_12_22"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearTwo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingEnd="@dimen/_20pxh"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="@dimen/_16pxv" style="@style/groupStylecornerRadius">
            <TextView android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/txtThirtySevenMillionSevenHundred"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{balance1RowModel.txtThirtySevenMillionSevenHundred}"
                style="@style/txtIntermedium14_1" tools:text="@string/msg_3778_1234"/>
            <ImageView android:id="@+id/imageImage"
                android:layout_gravity="top"
                android:layout_height="@dimen/_18pxh"
                android:layout_width="@dimen/_27pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_user_onprimary"
                tools:ignore="ContentDescription" tools:src="@drawable/img_user_onprimary"/>
        </LinearLayout>
    </LinearLayout>
</layout>
