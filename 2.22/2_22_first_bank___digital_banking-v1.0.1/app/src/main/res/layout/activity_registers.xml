<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="registersVM" type="com.firstbankdigitalbanking.app.modules.registers.data.viewmodel.RegistersVM"/>
    </data>
    <LinearLayout android:id="@+id/linearRegisters"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;gray_100_01&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageVector"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector"
                tools:ignore="ContentDescription" tools:src="@drawable/img_vector"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearFirstName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/_16pxh"
            android:paddingStart="@dimen/_16pxh" android:paddingTop="@dimen/_73pxv">
            <TextView android:ellipsize="end" android:gravity="start"
                android:id="@+id/txtCreateANewAccount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{registersVM.registersModel.txtCreateANewAccount}"
                style="@style/txtIntersemibold28" tools:text="@string/msg_create_a_new_account"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtItSFastAndEasy"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{registersVM.registersModel.txtItSFastAndEasy}"
                style="@style/txtIntermedium14" tools:text="@string/msg_it_s_fast_and_easy"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearFirstName1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <EditText
                    android:background="@drawable/rectangle_bg_name_indigo_50_radius_15"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:hint="@string/lbl_first_name"
                    android:id="@+id/etFirstName"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_15pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@={registersVM.registersModel.etFirstNameValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                    android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold" tools:ignore="Autofill"/>
                <EditText
                    android:background="@drawable/rectangle_bg_name_indigo_50_radius_15"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:hint="@string/lbl_last_name"
                    android:id="@+id/etLastName"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_15pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@={registersVM.registersModel.etLastNameValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                    android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold" tools:ignore="Autofill"/>
            </LinearLayout>
            <EditText
                android:background="@drawable/rectangle_bg_name_indigo_50_radius_15"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:hint="@string/lbl_email"
                android:id="@+id/etEmail" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_15pxv"
                android:paddingEnd="@dimen/_16pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="@={registersVM.registersModel.etEmailValue}"
                android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                android:textFontWeight="500"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <EditText
                android:background="@drawable/rectangle_bg_name_indigo_50_radius_15"
                android:drawableEnd="@drawable/img_antdesigneyeinvisiblefilled"
                android:drawablePadding="@dimen/_30pxh"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:hint="@string/lbl_password"
                android:id="@+id/etPassword" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_15pxv"
                android:paddingEnd="@dimen/_16pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="@={registersVM.registersModel.etPasswordValue}"
                android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_400_01&quot;}"
                android:textFontWeight="500"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_25"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:gravity="center" android:id="@+id/btnRegister"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_register2"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;onPrimary&quot;,&quot;opacity&quot;:1}"
                android:textFontWeight="400"
                android:textSize="@dimen/_18pxh"
                android:textStyle="normal" tools:text="@string/lbl_register2"/>
        </LinearLayout>
    </LinearLayout>
</layout>
