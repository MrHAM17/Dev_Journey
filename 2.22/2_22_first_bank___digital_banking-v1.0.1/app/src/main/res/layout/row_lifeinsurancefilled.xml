<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="lifeinsurancefilledRowModel" type="com.firstbankdigitalbanking.app.modules.services.data.model.LifeinsurancefilledRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearLifeInsuranceFilled"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_20pxv"
        android:paddingEnd="@dimen/_24pxh"
        android:paddingStart="@dimen/_24pxh"
        android:paddingTop="@dimen/_20pxv" style="@style/groupStyle{&quot;name&quot;:&quot;onPrimary&quot;,&quot;opacity&quot;:1}cornerRadius">
        <ImageButton
            android:background="@drawable/rectangle_bg_name_gray_100_01_radius_22"
            android:id="@+id/btnLifeInsuranceFilled"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_45pxh"
            android:layout_width="@dimen/_45pxh"
            android:paddingHorizontal="@dimen/_12pxh"
            android:paddingVertical="@dimen/_12pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_life_insurance_filled" tools:ignore="ContentDescription"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearLifeInsurance"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtLifeInsurance"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{lifeinsurancefilledRowModel.txtLifeInsurance}"
                style="@style/txtIntersemibold16" tools:text="@string/lbl_life_insurance"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtUnlimitedProtection"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{lifeinsurancefilledRowModel.txtUnlimitedProtection}"
                style="@style/txtInterregular12" tools:text="@string/msg_unlimited_protection"/>
        </LinearLayout>
    </LinearLayout>
</layout>
