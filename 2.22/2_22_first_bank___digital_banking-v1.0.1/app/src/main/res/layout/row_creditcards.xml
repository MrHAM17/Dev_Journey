<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="creditcardsRowModel" type="com.firstbankdigitalbanking.app.modules.creditcards.data.model.CreditcardsRowModel"/>
    </data>
    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearCreditCardOne"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_12pxh"
        android:paddingVertical="@dimen/_12pxv" style="@style/groupStylenameonPrimaryopacity1cornerRadius_1">
        <ImageButton
            android:background="@drawable/rectangle_bg_name_gray_100_01_radius_12"
            android:id="@+id/btnCreditCardOne"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_45pxh"
            android:layout_width="@dimen/_45pxh"
            android:paddingHorizontal="@dimen/_12pxh"
            android:paddingVertical="@dimen/_12pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_credit_card_1" tools:ignore="ContentDescription"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearCardType"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtCardType"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{creditcardsRowModel.txtCardType}"
                style="@style/txtIntermedium14_2" tools:text="@string/lbl_card_type"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSecondary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{creditcardsRowModel.txtSecondary}"
                style="@style/txtInterregular12" tools:text="@string/lbl_secondary"/>
        </LinearLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearBank"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="vertical">
            <TextView android:ellipsize="end" android:id="@+id/txtBank"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{creditcardsRowModel.txtBank}"
                style="@style/txtIntermedium14_2" tools:text="@string/lbl_bank"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtDBLBank"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{creditcardsRowModel.txtDBLBank}"
                style="@style/txtInterregular12" tools:text="@string/lbl_dbl_bank"/>
        </LinearLayout>
        <TextView android:ellipsize="end"
            android:id="@+id/txtViewDetails"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{creditcardsRowModel.txtViewDetails}"
            style="@style/txtIntermedium10_2" tools:text="@string/lbl_view_details"/>
    </LinearLayout>
</layout>
