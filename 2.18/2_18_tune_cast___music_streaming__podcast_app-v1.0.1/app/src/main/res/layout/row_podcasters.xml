<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="podcastersRowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.podcasters.data.model.PodcastersRowModel"/>
    </data>
    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearPodcaster"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearArtistName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageImage1"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_80pxh"
                android:layout_width="@dimen/_80pxh"
                android:scaleType="fitXY"
                cornerRadius="@{@dimen/_20pxh}"
                imageRes="@{@drawable/img_image_80x80}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_image_80x80"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearAutoLayoutVertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtArtistName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{podcastersRowModel.txtArtistName}"
                    style="@style/txtUrbanistromanbold18" tools:text="@string/msg_the_jordan_harbinger2"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEpisodesCounter"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{podcastersRowModel.txtEpisodesCounter}"
                    style="@style/txtUrbanistromanmedium12" tools:text="@string/lbl_692_episodes"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/imageImage2"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_20pxh"
            android:layout_width="@dimen/_20pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_categories_more"
            tools:ignore="ContentDescription" tools:src="@drawable/img_categories_more"/>
    </LinearLayout>
</layout>
