<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="trendingnowRowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.trendingnow.data.model.TrendingnowRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <ImageView android:id="@+id/imageImage"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_188pxh"
            android:layout_width="@dimen/_184pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_28pxh}"
            imageRes="@{@drawable/img_image_188x184}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image_188x184"/>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtLoremIpsumDolor"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:letterSpacing="0.01"
            android:text="@{trendingnowRowModel.txtLoremIpsumDolor}"
            style="@style/txtUrbanistromanbold18" tools:text="@string/msg_shades_of_love"/>
    </LinearLayout>
</layout>
