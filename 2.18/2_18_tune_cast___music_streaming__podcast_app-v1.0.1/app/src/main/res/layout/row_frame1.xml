<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="frame1RowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.home.data.model.Frame1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="vertical">
        <ImageView android:id="@+id/imageArianaGrande"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_160pxh"
            android:layout_width="@dimen/_160pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_image_2}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image_2"/>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtArtistsName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:letterSpacing="0.01" android:singleLine="true"
            android:text="@{frame1RowModel.txtArtistsName}"
            style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_ariana_grande"/>
    </LinearLayout>
</layout>
