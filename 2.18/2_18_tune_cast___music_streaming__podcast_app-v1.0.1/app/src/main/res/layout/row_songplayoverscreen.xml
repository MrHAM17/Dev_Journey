<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="songplayoverscreenRowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.songplayoverscreen.data.model.SongplayoverscreenRowModel"/>
    </data>
    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearSongCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearSongTitle1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearSongTitle2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageImage2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_80pxh"
                    android:layout_width="@dimen/_80pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_20pxh}"
                    imageRes="@{@drawable/img_image_60}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_image_60"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearAutoLayoutVertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSongTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{songplayoverscreenRowModel.txtSongTitle}"
                        style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_starboy"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtDetails"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@{songplayoverscreenRowModel.txtDetails}"
                        style="@style/txtUrbanistromanmedium12" tools:text="@string/msg_the_weeknd_daft"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView android:id="@+id/imageImage3"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_32pxh"
                android:layout_width="@dimen/_32pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_iconly_bold_play_onprimarycontainer"
                tools:ignore="ContentDescription" tools:src="@drawable/img_iconly_bold_play_onprimarycontainer"/>
        </LinearLayout>
        <ImageView android:id="@+id/imageImage"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_20pxh"
            android:layout_width="@dimen/_20pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_categories_more"
            tools:ignore="ContentDescription" tools:src="@drawable/img_categories_more"/>
    </LinearLayout>
</layout>
