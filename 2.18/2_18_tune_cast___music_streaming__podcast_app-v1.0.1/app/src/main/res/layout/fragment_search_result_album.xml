<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="searchResultAlbumVM" type="com.tunecastmusicstreamingpodcastapp.app.modules.searchresultalbum.data.viewmodel.SearchResultAlbumVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSweetener"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="top|center"
            android:id="@+id/recyclerSearchResultAlbum"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" itemSpace="@{@dimen/_12pxh}"
            tools:itemCount="4" tools:listitem="@layout/row_searchresultalbum"/>
    </LinearLayout>
</layout>
