<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="searchResultProfileTabContainerVM" type="com.tunecastmusicstreamingpodcastapp.app.modules.searchresultprofiletabcontainer.data.viewmodel.SearchResultProfileTabContainerVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSearch"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.SearchView
            android:background="@drawable/rectangle_bg_name_gray_100_radius_16"
            android:gravity="center_horizontal"
            android:id="@+id/searchViewSearch"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/searchViewsearch"
            app:iconifiedByDefault="false"
            app:queryBackground="@android:color/transparent"
            app:queryHint="@string/lbl_jenny" app:searchIcon="@drawable/img_categoriesx_close_componentadditional_icons"/>
        <com.google.android.material.tabs.TabLayout
            android:gravity="start" android:id="@+id/tabLayoutTabview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:tabBackground="@drawable/selector_bg_name_onprimarycontainer_radius_19"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="0dp" app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}" app:tabTextColor="@color/{&quot;name&quot;:&quot;onPrimaryContainer&quot;}"/>
        <androidx.viewpager2.widget.ViewPager2
            android:gravity="center_horizontal"
            android:id="@+id/viewPagerTabBarView"
            android:layout_height="match_parent"
            android:layout_weight="1" android:layout_width="match_parent"/>
    </LinearLayout>
</layout>
