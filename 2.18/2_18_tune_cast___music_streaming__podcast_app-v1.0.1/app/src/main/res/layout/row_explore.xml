<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="exploreRowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.explore.data.model.ExploreRowModel"/>
    </data>
    <LinearLayout android:gravity="end"
        android:id="@+id/linearExploreCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylecornerRadius">
        <TextView android:ellipsize="end"
            android:id="@+id/txtCategories"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:letterSpacing="0.01" android:singleLine="true"
            android:text="@{exploreRowModel.txtCategories}"
            style="@style/txtUrbanistromanbold18_1" tools:text="@string/lbl_charts"/>
        <ImageView android:id="@+id/imageCharts"
            android:layout_height="@dimen/_91pxh"
            android:layout_width="@dimen/_81pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_12pxh}"
            imageRes="@{@drawable/img_image_91x81}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image_91x81"/>
    </LinearLayout>
</layout>
