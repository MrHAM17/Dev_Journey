<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="songsnotificationsRowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.songsnotifications.data.model.SongsnotificationsRowModel"/>
    </data>
    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearToday"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageToday1"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_80pxh"
            android:layout_width="@dimen/_80pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_20pxh}"
            imageRes="@{@drawable/img_image_80x80}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image_80x80"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearFrame1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearAutoLayoutHorizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtToday"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{songsnotificationsRowModel.txtToday}"
                    style="@style/txtUrbanistromanbold12" tools:text="@string/lbl_today"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtText1"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{songsnotificationsRowModel.txtText1}"
                    style="@style/txtUrbanistromanbold12" tools:text="@string/lbl"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTime"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{songsnotificationsRowModel.txtTime}"
                    style="@style/txtUrbanistromanbold12" tools:text="@string/lbl_04_36_mins"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtBREAKMYSOUL"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:letterSpacing="0.01" android:singleLine="true"
                android:text="@{songsnotificationsRowModel.txtBREAKMYSOUL}"
                style="@style/txtUrbanistregular18" tools:text="@string/lbl_break_my_soul"/>
            <LinearLayout android:id="@+id/linearFrame2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtBeyonce"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{songsnotificationsRowModel.txtBeyonce}"
                    style="@style/txtUrbanistromanbold12" tools:text="@string/lbl_beyonce"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtText2"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{songsnotificationsRowModel.txtText2}"
                    style="@style/txtUrbanistromanbold12" tools:text="@string/lbl"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAlbum"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{songsnotificationsRowModel.txtAlbum}"
                    style="@style/txtUrbanistromanbold12" tools:text="@string/lbl_album"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout android:id="@+id/frameSpacer"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <ImageButton android:id="@+id/btnIconlyBoldPlay"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_32pxh"
            android:layout_width="@dimen/_32pxh"
            android:paddingHorizontal="@dimen/_2pxh"
            android:paddingVertical="@dimen/_2pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_iconly_bold_play" tools:ignore="ContentDescription"/>
        <ImageView android:id="@+id/imageToday2"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_13pxh"
            android:layout_width="@dimen/_3pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_vector_gray_900_01"
            tools:ignore="ContentDescription" tools:src="@drawable/img_vector_gray_900_01"/>
    </LinearLayout>
</layout>
