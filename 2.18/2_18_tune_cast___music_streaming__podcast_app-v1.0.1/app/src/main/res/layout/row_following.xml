<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="followingRowModel" type="com.tunecastmusicstreamingpodcastapp.app.modules.searchresultprofile.data.model.FollowingRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearArtist"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <LinearLayout android:id="@+id/linearSixty"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageJennyWigington"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_80pxh"
                android:layout_width="@dimen/_80pxh"
                android:scaleType="centerCrop" circular="@{true}"
                imageRes="@{@drawable/img_image_83}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_image_83"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearAutoLayoutVertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtArtistName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{followingRowModel.txtArtistName}"
                    style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_jenny_wigington"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFollowersCounter"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{followingRowModel.txtFollowersCounter}"
                    style="@style/txtUrbanistromanmedium12" tools:text="@string/lbl_2_798_followers"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rectangle_border_name_primary_radius_16"
            android:ellipsize="end" android:fontFamily="@font/urbanist"
            android:gravity="center" android:id="@+id/btnFollowing"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_32pxv"
            android:layout_width="@dimen/_92pxh"
            android:letterSpacing="0.01"
            android:paddingBottom="@dimen/_7pxv"
            android:paddingEnd="@dimen/_16pxh"
            android:paddingStart="@dimen/_16pxh"
            android:paddingTop="@dimen/_7pxv" android:singleLine="true"
            android:text="@string/lbl_following"
            android:textAllCaps="false"
            android:textColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
            android:textFontWeight="600"
            android:textSize="@dimen/_14pxh" android:textStyle="bold" tools:text="@string/lbl_following"/>
    </LinearLayout>
</layout>
