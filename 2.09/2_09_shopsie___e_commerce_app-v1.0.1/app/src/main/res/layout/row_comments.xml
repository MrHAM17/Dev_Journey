<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="commentsRowModel" type="com.shopsieecommerceapp.app.modules.comments.data.model.CommentsRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearComment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearThirtyTwo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageBillyGreen"
                android:layout_height="@dimen/_28pxh"
                android:layout_width="@dimen/_28pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_play"
                tools:ignore="ContentDescription" tools:src="@drawable/img_play"/>
            <TextView android:ellipsize="end" android:id="@+id/txtName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@{commentsRowModel.txtName}"
                style="@style/txtIntermedium14_2" tools:text="@string/lbl_billy_green"/>
            <FrameLayout android:id="@+id/frameSpacer"
                android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:ellipsize="end" android:id="@+id/txtTime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@{commentsRowModel.txtTime}"
                style="@style/txtInterregular12" tools:text="@string/lbl_20min_ago"/>
        </LinearLayout>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtCopy"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_8pxh"
            android:text="@{commentsRowModel.txtCopy}"
            style="@style/txtInterregular14_2" tools:text="@string/msg_awesome_edward"/>
        <LinearLayout android:id="@+id/linearWidget"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/imageImage1"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_14pxh"
                android:layout_width="@dimen/_14pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_favorite_secondarycontainer"
                tools:ignore="ContentDescription" tools:src="@drawable/img_favorite_secondarycontainer"/>
            <ImageView android:id="@+id/imageImage2"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_14pxh"
                android:layout_width="@dimen/_14pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_instagram_gray_500"
                tools:ignore="ContentDescription" tools:src="@drawable/img_instagram_gray_500"/>
        </LinearLayout>
    </LinearLayout>
</layout>
