<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="paymentEmptyTabContainerVM" type="com.housitbuyrentsellproperty.app.modules.paymentemptytabcontainer.data.viewmodel.PaymentEmptyTabContainerVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSkip"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageButton
                android:background="@drawable/rectangle_bg_name_gray_100_radius_bl_25_br_25"
                android:id="@+id/btnArrowLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrow_left" tools:ignore="ContentDescription"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_gray_100_radius_19"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:gravity="center" android:id="@+id/btnSkip"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/lbl_skip"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_800_01&quot;}"
                android:textFontWeight="400"
                android:textSize="@dimen/_14pxh"
                android:textStyle="normal" tools:text="@string/lbl_skip"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearPaymentEmpty"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:id="@+id/txtTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@{paymentEmptyTabContainerVM.paymentEmptyTabContainerModel.txtTitle}"
                style="@style/txtRalewaysemibold24" tools:text="@string/msg_add_your_payment"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{paymentEmptyTabContainerVM.paymentEmptyTabContainerModel.txtDescription}"
                style="@style/txtRalewayregular14" tools:text="@string/msg_you_can_edit_this"/>
            <FrameLayout android:id="@+id/frameWalletEmpty"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_180pxv"
                android:layout_width="@dimen/_327pxh" style="@style/groupStyle{&quot;name&quot;:&quot;blue_gray_800_01&quot;}cornerRadius">
                <ImageView android:id="@+id/imageSubtract"
                    android:layout_gravity="top|end"
                    android:layout_height="@dimen/_97pxh"
                    android:layout_width="@dimen/_130pxh"
                    android:scaleType="fitXY"
                    imageRes="@{@drawable/img_subtract_white_a700}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_subtract_white_a700"/>
                <LinearLayout android:id="@+id/linearYourname"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtYourname"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@{paymentEmptyTabContainerVM.paymentEmptyTabContainerModel.txtYourname}"
                        style="@style/txtRalewaybold14_2" tools:text="@string/lbl_your_name"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtText"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{paymentEmptyTabContainerVM.paymentEmptyTabContainerModel.txtText}"
                        style="@style/txtRalewaysemibold18_1" tools:text="@string/msg"/>
                    <LinearLayout android:id="@+id/linearBalance"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <LinearLayout android:gravity="start"
                            android:id="@+id/linearLayout"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="vertical">
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtBalance"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{paymentEmptyTabContainerVM.paymentEmptyTabContainerModel.txtBalance}"
                                style="@style/txtRalewaymedium8_4" tools:text="@string/lbl_balance"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtPrice"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{paymentEmptyTabContainerVM.paymentEmptyTabContainerModel.txtPrice}"
                                style="@style/txtRalewaysemibold14" tools:text="@string/lbl5"/>
                        </LinearLayout>
                        <ImageView android:id="@+id/imageThumbsUp"
                            android:layout_gravity="bottom"
                            android:layout_height="@dimen/_20pxh"
                            android:layout_width="@dimen/_20pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_thumbs_up_white_a700"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbs_up_white_a700"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <com.google.android.material.tabs.TabLayout
                android:gravity="end" android:id="@+id/tabLayoutTabview"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:tabMode="scrollable"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerTabBarView"
                android:layout_height="match_parent"
                android:layout_weight="1" android:layout_width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</layout>
