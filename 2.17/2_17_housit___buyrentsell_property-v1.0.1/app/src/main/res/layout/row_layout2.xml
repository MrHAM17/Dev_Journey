<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="layout2RowModel" type="com.housitbuyrentsellproperty.app.modules.summarychangepayment.data.model.Layout2RowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearWalletVisa"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_16pxh"
        android:paddingVertical="@dimen/_16pxv" style="@style/groupStyle{&quot;name&quot;:&quot;green_A400&quot;}cornerRadius">
        <ImageButton
            android:background="@drawable/rectangle_bg_name_white_a700_radius_12"
            android:id="@+id/btnCheckmark"
            android:layout_height="@dimen/_25pxh"
            android:layout_width="@dimen/_25pxh"
            android:paddingHorizontal="@dimen/_7pxh"
            android:paddingVertical="@dimen/_7pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_checkmark" tools:ignore="ContentDescription"/>
        <TextView android:ellipsize="end" android:id="@+id/txtText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{layout2RowModel.txtText}"
            style="@style/txtRalewaysemibold18_1" tools:text="@string/lbl_1222"/>
        <LinearLayout android:id="@+id/linearBalance"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtBalance"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{layout2RowModel.txtBalance}"
                    style="@style/txtRalewaysemibold8" tools:text="@string/lbl_balance"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{layout2RowModel.txtPrice}"
                    style="@style/txtRalewaysemibold12_4" tools:text="@string/lbl_54_200"/>
            </LinearLayout>
            <ImageView android:id="@+id/imageBalance"
                android:layout_height="@dimen/_20pxh"
                android:layout_width="@dimen/_20pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_settings"
                tools:ignore="ContentDescription" tools:src="@drawable/img_settings"/>
        </LinearLayout>
    </LinearLayout>
</layout>
