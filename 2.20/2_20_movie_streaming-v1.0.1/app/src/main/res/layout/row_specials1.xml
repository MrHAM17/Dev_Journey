<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="specials1RowModel" type="com.moviestreaming.app.modules.dashboard.data.model.Specials1RowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearMovieCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="vertical">
        <ImageView android:id="@+id/imageImage"
            android:layout_height="@dimen/_140pxh"
            android:layout_width="@dimen/_90pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_2pxh}"
            imageRes="@{@drawable/img_thumbnail_image_3}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_image_3"/>
        <TextView android:id="@+id/txtTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@{specials1RowModel.txtTitle}"
            style="@style/txtRobotoregular12_1" tools:text="@string/msg_jumanji_the_next"/>
    </LinearLayout>
</layout>
