<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="trendingRowModel" type="com.moviestreaming.app.modules.exploreten.data.model.TrendingRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearMovieCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="vertical">
        <ImageView android:id="@+id/imageDarkPhoenix"
            android:layout_height="@dimen/_160pxh"
            android:layout_width="@dimen/_312pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_2pxh}"
            imageRes="@{@drawable/img_thumbnail_image_12}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_image_12"/>
        <TextView android:ellipsize="end" android:id="@+id/txtTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{trendingRowModel.txtTitle}"
            style="@style/txtRobotomedium14" tools:text="@string/lbl_dark_phoenix2"/>
        <LinearLayout android:id="@+id/linearFrameTwentySix"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtSubLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{trendingRowModel.txtSubLabel}"
                style="@style/txtRobotoregular12_2" tools:text="@string/lbl_sub_label"/>
            <View
                android:background="@drawable/rectangle_bg_name_onprimarycontainer_radius_1"
                android:id="@+id/viewView"
                android:layout_height="@dimen/_3pxh" android:layout_width="@dimen/_3pxh"/>
            <LinearLayout android:id="@+id/linearRattings"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtStar"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{trendingRowModel.txtStar}"
                    style="@style/txtRobotoregular12_2" tools:text="@string/lbl_4_5"/>
                <ImageView android:id="@+id/imageImage"
                    android:layout_height="@dimen/_8pxh"
                    android:layout_width="@dimen/_8pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_signal"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_signal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
