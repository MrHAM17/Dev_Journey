<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="specialsRowModel" type="com.moviestreaming.app.modules.dashboard.data.model.SpecialsRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearMovieCard"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="vertical">
        <ImageView android:id="@+id/imageThePerfection"
            android:layout_height="@dimen/_140pxh"
            android:layout_width="@dimen/_90pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_2pxh}"
            imageRes="@{@drawable/img_thumbnail_image}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_image"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBarRatingBar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:numStars="5"
            android:rating="0" style="@style/Widget.AppCompat.RatingBar.Small"/>
        <TextView android:ellipsize="end" android:id="@+id/txtTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{specialsRowModel.txtTitle}"
            style="@style/txtRobotoregular12_1" tools:text="@string/lbl_the_perfection"/>
    </LinearLayout>
</layout>
