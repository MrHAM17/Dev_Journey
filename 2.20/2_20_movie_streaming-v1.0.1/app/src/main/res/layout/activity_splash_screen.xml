<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="splashScreenVM" type="com.moviestreaming.app.modules.splashscreen.data.viewmodel.SplashScreenVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSplashScreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle">
        <LinearLayout android:id="@+id/linearGetStarted"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_225pxv"
            android:paddingEnd="@dimen/_56pxh"
            android:paddingStart="@dimen/_56pxh"
            android:paddingTop="@dimen/_225pxv" style="@style/groupStyle_1">
            <TextView android:ellipsize="end"
                android:id="@+id/txtGetStarted"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{splashScreenVM.splashScreenModel.txtGetStarted}"
                style="@style/txtRobotobold32" tools:text="@string/lbl_get_started"/>
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtWatchYourFavourite"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@{splashScreenVM.splashScreenModel.txtWatchYourFavourite}"
                style="@style/txtRobotoregular18" tools:text="@string/msg_watch_your_favourite"/>
        </LinearLayout>
    </LinearLayout>
</layout>
