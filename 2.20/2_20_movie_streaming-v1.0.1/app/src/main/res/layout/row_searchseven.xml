<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="searchsevenRowModel" type="com.moviestreaming.app.modules.searchseven.data.model.SearchsevenRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearMovieCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <ImageView android:id="@+id/imageJallikatta"
            android:layout_height="@dimen/_140pxh"
            android:layout_width="@dimen/_98pxh"
            android:scaleType="fitXY" cornerRadius="@{@dimen/_2pxh}"
            imageRes="@{@drawable/img_thumbnail_image_20}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_thumbnail_image_20"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBarRatingBar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:numStars="5"
            android:rating="0" style="@style/Widget.AppCompat.RatingBar.Small"/>
        <TextView android:ellipsize="end" android:id="@+id/txtTitle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{searchsevenRowModel.txtTitle}"
            style="@style/txtRobotoregular12_1" tools:text="@string/lbl_jallikatta"/>
    </LinearLayout>
</layout>
