<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="homeSearchVM" type="com.vertexrealestateapp.app.modules.homesearch.data.viewmodel.HomeSearchVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSearch"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;gray_50&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <androidx.appcompat.widget.SearchView
                android:background="@drawable/rectangle_bg_name_white_a700_border_name_blue_400_radius_24"
                android:id="@+id/searchViewSearch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:theme="@style/searchViewsearch"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                app:queryHint="@string/msg_360_stillwater_rd" app:searchIcon="@drawable/img_icon_blue_gray_500_24x24"/>
            <ImageButton
                android:background="@drawable/rectangle_bg_name_white_a700_radius_24"
                android:id="@+id/btnFile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_file" tools:ignore="ContentDescription"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearHomeSearch"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_12pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_12pxv">
            <LinearLayout android:id="@+id/linearGPS"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageBrightness"
                    android:layout_gravity="top"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_brightness"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_brightness"/>
                <TextView android:ellipsize="end"
                    android:gravity="bottom"
                    android:id="@+id/txtOrUseMyCurrent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{homeSearchVM.homeSearchModel.txtOrUseMyCurrent}"
                    style="@style/txtManropesemibold14" tools:text="@string/msg_or_use_my_current"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSearchResults"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{homeSearchVM.homeSearchModel.txtSearchResults}"
                style="@style/txtManropesemibold14_1" tools:text="@string/lbl_search_results"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHomeSearch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_17pxh}" tools:itemCount="3" tools:listitem="@layout/row_homesearch"/>
        </LinearLayout>
    </LinearLayout>
</layout>
