<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="homealarmRowModel" type="com.vertexrealestateapp.app.modules.homealarm.data.model.HomealarmRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearAlertCard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_13pxv"
        android:paddingEnd="@dimen/_15pxh"
        android:paddingStart="@dimen/_15pxh"
        android:paddingTop="@dimen/_13pxv" style="@style/groupStyle{&quot;name&quot;:&quot;gray_50&quot;}cornerRadius">
        <LinearLayout android:id="@+id/linearTitleAndDetails"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearMightyCincoFamily"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtMightyCincoFamily"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{homealarmRowModel.txtMightyCincoFamily}"
                    style="@style/txtManropebold16" tools:text="@string/msg_mighty_cinco_family"/>
                <LinearLayout android:id="@+id/linearLocation"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageImage"
                        android:layout_gravity="top"
                        android:layout_height="@dimen/_14pxh"
                        android:layout_width="@dimen/_14pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_icon_map_pin"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_icon_map_pin"/>
                    <TextView android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/txtStCelinaDelaware"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.02"
                        android:singleLine="true"
                        android:text="@{homealarmRowModel.txtStCelinaDelaware}"
                        style="@style/txtManrope12" tools:text="@string/msg_st_celina_delaware2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearJan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <LinearLayout android:id="@+id/linearDate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageJan"
                        android:layout_gravity="top"
                        android:layout_height="@dimen/_14pxh"
                        android:layout_width="@dimen/_14pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_calendar"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_calendar"/>
                    <TextView android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/txtJan"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.02"
                        android:singleLine="true"
                        android:text="@{homealarmRowModel.txtJan}"
                        style="@style/txtManropesemibold12" tools:text="@string/lbl_jan_1_2021"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearTime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imagePM"
                        android:layout_gravity="top"
                        android:layout_height="@dimen/_14pxh"
                        android:layout_width="@dimen/_14pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_clock"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_clock"/>
                    <TextView android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/txtTime"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.02"
                        android:singleLine="true"
                        android:text="@{homealarmRowModel.txtTime}"
                        style="@style/txtManropesemibold12" tools:text="@string/lbl_4_00_pm"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearAvatarAndPhone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearAvatarAndDetails"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageMightyCincoFamily"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_33pxh"
                    android:layout_width="@dimen/_33pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_8pxh}"
                    imageRes="@{@drawable/img_avatar}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_avatar"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtBuyerSAgent"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.02"
                        android:singleLine="true"
                        android:text="@{homealarmRowModel.txtBuyerSAgent}"
                        style="@style/txtManrope10" tools:text="@string/lbl_buyer_s_agent"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtLeslieAlexander"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.02"
                        android:singleLine="true"
                        android:text="@{homealarmRowModel.txtLeslieAlexander}"
                        style="@style/txtManropesemibold12" tools:text="@string/msg_leslie_alexander"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_border_name_primary_radius_5"
                android:drawablePadding="@dimen/_8pxh"
                android:drawableStart="@drawable/img_phone"
                android:ellipsize="end"
                android:fontFamily="@font/manrope"
                android:gravity="center" android:id="@+id/btnPhone"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_37pxv"
                android:layout_width="@dimen/_103pxh"
                android:paddingBottom="@dimen/_8pxv"
                android:paddingEnd="@dimen/_16pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_8pxv"
                android:singleLine="true"
                android:text="@string/lbl_phone"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_14pxh"
                android:textStyle="bold" tools:text="@string/lbl_phone"/>
        </LinearLayout>
    </LinearLayout>
</layout>
