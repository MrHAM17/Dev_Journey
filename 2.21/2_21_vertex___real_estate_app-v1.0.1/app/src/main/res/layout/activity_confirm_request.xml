<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="confirmRequestVM" type="com.vertexrealestateapp.app.modules.confirmrequest.data.viewmodel.ConfirmRequestVM"/>
    </data>
    <LinearLayout android:id="@+id/linearDone"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;gray_50&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp" style="@style/groupStyle{&quot;name&quot;:&quot;gray_50&quot;}">
            <ImageButton
                android:background="@drawable/rectangle_bg_name_white_a700_border_name_gray_300_radius_20"
                android:id="@+id/btnArrowLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrow_left_primarycontainer" tools:ignore="ContentDescription"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearConfirmRequest"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_24pxh" android:paddingVertical="@dimen/_24pxv">
            <LinearLayout android:id="@+id/linearConfirm"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_30pxv"
                android:paddingEnd="@dimen/_23pxh"
                android:paddingStart="@dimen/_23pxh"
                android:paddingTop="@dimen/_30pxv" style="@style/groupStylenameprimarycornerRadius_1">
                <ImageButton
                    android:background="@drawable/rectangle_bg_name_primary_radius_20"
                    android:id="@+id/btnCheckmark"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_width="@dimen/_40pxh"
                    android:paddingHorizontal="@dimen/_10pxh"
                    android:paddingVertical="@dimen/_10pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_checkmark" tools:ignore="ContentDescription"/>
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtRequestReceived"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{confirmRequestVM.confirmRequestModel.txtRequestReceived}"
                    style="@style/txtManropebold18" tools:text="@string/msg_request_received"/>
                <TextView android:gravity="center_horizontal"
                    android:id="@+id/txtTime"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{confirmRequestVM.confirmRequestModel.txtTime}"
                    style="@style/txtIntermedium13" tools:text="@string/msg_we_re_checking_if"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearMightyCincoFamily"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_21pxv"
                android:paddingEnd="@dimen/_23pxh"
                android:paddingStart="@dimen/_23pxh"
                android:paddingTop="@dimen/_21pxv" style="@style/groupStylecornerRadius">
                <TextView android:gravity="start"
                    android:id="@+id/txtAssociateCapital"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@{confirmRequestVM.confirmRequestModel.txtAssociateCapital}"
                    style="@style/txtManropesemibold14" tools:text="@string/msg_associate_capital"/>
                <View
                    android:background="@color/{&quot;name&quot;:&quot;gray_300&quot;}"
                    android:id="@+id/lineLine"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_279pxh"/>
                <LinearLayout android:id="@+id/linearBg"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageBg"
                        android:layout_height="@dimen/_48pxh"
                        android:layout_width="@dimen/_48pxh"
                        android:scaleType="centerCrop"
                        circular="@{true}"
                        imageRes="@{@drawable/img_bg_48x48}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_bg_48x48"/>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearLeslieAlexander"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtLeslieAlexander"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.01"
                            android:singleLine="true"
                            android:text="@{confirmRequestVM.confirmRequestModel.txtLeslieAlexander}"
                            style="@style/txtManropebold16" tools:text="@string/msg_leslie_alexander"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtRichCapitalPropertiesLLC"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{confirmRequestVM.confirmRequestModel.txtRichCapitalPropertiesLLC}"
                            style="@style/txtManropemedium14" tools:text="@string/msg_rich_capital_properties"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/imageArrowRight"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_arrow_right"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearBTN"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical" style="@style/groupStyle">
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_10"
                android:ellipsize="end"
                android:fontFamily="@font/manrope"
                android:gravity="center" android:id="@+id/btnDone"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:letterSpacing="0.01"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@string/lbl_done"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;gray_50&quot;}"
                android:textFontWeight="700"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_done"/>
        </LinearLayout>
    </LinearLayout>
</layout>
