<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="jobdetailstabcontainerRowModel" type="com.hiredjobsearch.app.modules.jobdetailstabcontainer.data.model.JobdetailstabcontainerRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearSalary"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="vertical">
        <ImageButton
            android:background="@drawable/rectangle_bg_name_green_600_radius_24"
            android:id="@+id/btnWallet"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_48pxh"
            android:layout_width="@dimen/_48pxh"
            android:paddingHorizontal="@dimen/_12pxh"
            android:paddingVertical="@dimen/_12pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_wallet" tools:ignore="ContentDescription"/>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtSalary"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:letterSpacing="0.0"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="@{jobdetailstabcontainerRowModel.txtSalary}"
            style="@style/txtPlusJakartaSansmedium12_3" tools:text="@string/lbl_salary"/>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtPrice"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:letterSpacing="0.0"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="@{jobdetailstabcontainerRowModel.txtPrice}"
            style="@style/txtPlusJakartaSanssemibold14_1" tools:text="@string/lbl_6k_11k"/>
    </LinearLayout>
</layout>
