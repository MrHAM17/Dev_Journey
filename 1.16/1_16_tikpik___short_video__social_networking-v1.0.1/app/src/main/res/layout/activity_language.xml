<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearLanguage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onErrorContainer&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_down"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_down"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTitleSection"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/lbl_language"
                style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_language"/>
        </androidx.appcompat.widget.Toolbar>
        <FrameLayout android:gravity="center_horizontal"
            android:id="@+id/frameEnglishUS"
            android:layout_height="@dimen/_829pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_21pxv"
            android:paddingEnd="@dimen/_22pxh"
            android:paddingStart="@dimen/_22pxh" android:paddingTop="@dimen/_21pxv">
            <View
                android:background="@color/{&quot;name&quot;:&quot;gray_200&quot;}"
                android:id="@+id/lineLine"
                android:layout_gravity="top|center"
                android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_380pxh"/>
            <LinearLayout android:id="@+id/linearEnglishUS"
                android:layout_gravity="top|center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtSuggested"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_suggested"
                    style="@style/txtUrbanistromanbold20" tools:text="@string/lbl_suggested"/>
                <RadioGroup android:id="@+id/rgGroup386"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbEnglishUS"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@string/lbl_english_us"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_english_us"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbEnglishUK"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@string/lbl_english_uk"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_english_uk"/>
                </RadioGroup>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLanguage"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_language"
                    style="@style/txtUrbanistromanbold20" tools:text="@string/lbl_language"/>
                <RadioGroup android:id="@+id/rgLanguage"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbMandarin"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:paddingBottom="@dimen/_1pxv"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_mandarin"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_mandarin"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbHindi"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:paddingBottom="@dimen/_1pxv"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_hindi"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_hindi"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbSpanish"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@string/lbl_spanish"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_spanish"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbFrench"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:paddingBottom="@dimen/_1pxv"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_french"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_french"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbArabic"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:paddingBottom="@dimen/_1pxv"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_arabic"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_arabic"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbBengali"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@string/lbl_bengali"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_bengali"/>
                    <RadioButton
                        android:drawableEnd="@drawable/img_contrast"
                        android:drawablePadding="@dimen/_30pxh"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:id="@+id/rbRussian"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.01"
                        android:paddingBottom="@dimen/_1pxv"
                        android:paddingTop="@dimen/_1pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_russian"
                        android:textColor="@color/{&quot;name&quot;:&quot;gray_900&quot;}"
                        android:textFontWeight="600"
                        android:textSize="@dimen/_18pxh"
                        android:textStyle="bold" tools:text="@string/lbl_russian"/>
                </RadioGroup>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
