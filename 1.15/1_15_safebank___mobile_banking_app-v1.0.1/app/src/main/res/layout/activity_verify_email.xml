<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearVerifyEmail"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageButton
                android:background="@drawable/rectangle_border_name_gray_300_radius_17"
                android:id="@+id/btnArrowLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_arrow_left_black_900" tools:ignore="ContentDescription"/>
            <ImageButton
                android:background="@drawable/rectangle_border_name_gray_300_radius_17"
                android:id="@+id/btnUser"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/img_user" tools:ignore="ContentDescription"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearOtpView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_86pxv">
            <ImageView android:id="@+id/imageImage"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_154pxh"
                android:layout_width="@dimen/_280pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_group_204"
                tools:ignore="ContentDescription" tools:src="@drawable/img_group_204"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtVerifyYourEmail"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/msg_verify_your_email"
                style="@style/txtPoppinssemibold22" tools:text="@string/msg_verify_your_email"/>
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtPleaseEnterDigit"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/msg_please_enter_4_digit"
                style="@style/txtPoppinsmedium14_3" tools:text="@string/msg_please_enter_4_digit"/>
            <com.mukesh.OtpView android:focusableInTouchMode="true"
                android:id="@+id/otpViewOtpView"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/{&quot;name&quot;:&quot;black_900&quot;}"
                android:textSize="@dimen/_18pxh" app:OtpItemCount="4"
                app:OtpItemHeight="@dimen/_50pxv"
                app:OtpItemRadius="@dimen/_25pxh"
                app:OtpItemSpacing="@dimen/_10pxh"
                app:OtpItemWidth="@dimen/_50pxh"
                app:OtpLineColor="@color/{&quot;name&quot;:&quot;gray_300&quot;}" app:OtpViewType="rectangle"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtResendCode"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_resend_code"
                style="@style/txtPoppinsregular14" tools:text="@string/lbl_resend_code"/>
            <View
                android:background="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:id="@+id/lineLineTwo"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_92pxh"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_12"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="center" android:id="@+id/btnVerifyCode"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_50pxv"
                android:layout_width="@dimen/_327pxh"
                android:paddingBottom="@dimen/_13pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_13pxv"
                android:singleLine="true"
                android:text="@string/lbl_verify_code"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_verify_code"/>
        </LinearLayout>
    </LinearLayout>
</layout>
