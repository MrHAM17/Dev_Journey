<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="walkthroughOneVM" type="com.tikpikshortvideosocialnetworking.app.modules.walkthroughone.data.viewmodel.WalkthroughOneVM"/>
    </data>
    <LinearLayout android:id="@+id/linearWalkthroughOne"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onErrorContainer&quot;}">
        <FrameLayout android:id="@+id/frameSpacer"
            android:layout_height="wrap_content" android:layout_width="match_parent"/>
        <ImageView android:id="@+id/imageTen"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_252pxh"
            android:layout_width="@dimen/_365pxh"
            android:scaleType="fitXY" android:src="@drawable/img_10"
            tools:ignore="ContentDescription" tools:src="@drawable/img_10"/>
        <LinearLayout android:id="@+id/linearAutoLayoutVertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_48pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh"
            android:paddingTop="@dimen/_48pxv" style="@style/groupStyle{&quot;name&quot;:&quot;onErrorContainer&quot;}">
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtCreateShortVideos"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@{walkthroughOneVM.walkthroughOneModel.txtCreateShortVideos}"
                style="@style/txtUrbanistromanbold40" tools:text="@string/msg_create_short_videos"/>

            <com.asksira.loopingviewpager.indicator.CustomShapePagerIndicator
                android:id="@+id/indicatorPagerIndicator"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:drawable_normal="@drawable/indicator_unselected_bg_name_gray_300_radius_8"
                app:drawable_selected="@drawable/indicator_selected_bg_name_deep_orange_a400_radius_8"
                app:indicator_size="@dimen/_8pxh" app:indicator_spacing="@dimen/_6pxh"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_16"
                android:ellipsize="end"
                android:fontFamily="@font/urbanist"
                android:gravity="center" android:id="@+id/btnNext"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_58pxv"
                android:layout_width="@dimen/_380pxh"
                android:letterSpacing="0.01"
                android:paddingBottom="@dimen/_19pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_19pxv"
                android:singleLine="true"
                android:text="@string/lbl_next"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;onErrorContainer&quot;}"
                android:textFontWeight="700"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_next"/>
        </LinearLayout>
    </LinearLayout>
</layout>
