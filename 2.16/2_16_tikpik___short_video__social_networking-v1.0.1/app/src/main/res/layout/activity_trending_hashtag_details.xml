<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="trendingHashtagDetailsVM" type="com.tikpikshortvideosocialnetworking.app.modules.trendinghashtagdetails.data.viewmodel.TrendingHashtagDetailsVM"/>
    </data>
    <LinearLayout android:id="@+id/linearTrendingHashtag"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;onErrorContainer&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowDown"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_down"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_down"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTitleSection"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{trendingHashtagDetailsVM.trendingHashtagDetailsModel.txtTitleSection}"
                style="@style/txtUrbanistromanbold24" tools:text="@string/msg_trending_hashtag"/>
            <ImageView android:id="@+id/imageCategoriesShare"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_categories_share_gray_900"
                tools:ignore="ContentDescription" tools:src="@drawable/img_categories_share_gray_900"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearAddToFavorites"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_10pxv">
            <LinearLayout android:id="@+id/linearAddToFavorites1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <FrameLayout android:id="@+id/frameCategoriesHashtag"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_112pxv"
                    android:layout_width="@dimen/_112pxh"
                    android:paddingHorizontal="@dimen/_32pxh"
                    android:paddingVertical="@dimen/_32pxv" style="@style/groupStylenamedeep_orange_1">
                    <ImageView android:id="@+id/imageCategoriesHashtag"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_48pxh"
                        android:layout_width="@dimen/_48pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_categories_hashtag"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_categories_hashtag"/>
                </FrameLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearAddToFavorites2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtAmazingfood"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{trendingHashtagDetailsVM.trendingHashtagDetailsModel.txtAmazingfood}"
                        style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_amazingfood"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtDistance"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@{trendingHashtagDetailsVM.trendingHashtagDetailsModel.txtDistance}"
                        style="@style/txtUrbanistromanmedium14_2" tools:text="@string/lbl_827_5m_videos"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/rectangle_border_name_primary_radius_8"
                        android:drawablePadding="@dimen/_2pxh"
                        android:drawableStart="@drawable/img_bookmark_primary"
                        android:ellipsize="end"
                        android:fontFamily="@font/urbanist"
                        android:gravity="center"
                        android:id="@+id/btnAddToFavorites"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:paddingBottom="@dimen/_10pxv"
                        android:paddingEnd="@dimen/_29pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_10pxv"
                        android:singleLine="true"
                        android:text="@string/msg_add_to_favorites"
                        android:textAllCaps="false"
                        android:textColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
                        android:textFontWeight="700"
                        android:textSize="@dimen/_14pxh"
                        android:textStyle="bold" tools:text="@string/msg_add_to_favorites"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/{&quot;name&quot;:&quot;gray_200&quot;}"
                android:id="@+id/lineLine"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_380pxh"/>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerAutoLayoutVertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" itemSpace="@{@dimen/_8pxh}"
                tools:itemCount="9" tools:listitem="@layout/row_autolayoutvertical5"/>
        </LinearLayout>
    </LinearLayout>
</layout>
