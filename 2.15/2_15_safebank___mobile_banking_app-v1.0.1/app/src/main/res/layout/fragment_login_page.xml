<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginPageVM" type="com.safebankmobilebankingapp.app.modules.loginpage.data.viewmodel.LoginPageVM"/>
    </data>
    <LinearLayout android:id="@+id/linearEmail"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;white_A700&quot;}">
        <LinearLayout android:id="@+id/linearEmail1"
            android:layout_height="match_parent"
            android:layout_width="match_parent" android:orientation="vertical">
            <ImageView android:id="@+id/imageIllustration"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_212pxh"
                android:layout_width="@dimen/_212pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_illustration"
                tools:ignore="ContentDescription" tools:src="@drawable/img_illustration"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearInputField"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEmail"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{loginPageVM.loginPageModel.txtEmail}"
                    style="@style/txtPoppinsmedium16_1" tools:text="@string/lbl_email"/>
                <EditText android:drawableEnd="@drawable/img_checkmark"
                    android:drawablePadding="@dimen/_30pxh"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/lbl_xyz_gmail_com"
                    android:id="@+id/etEmail" android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@={loginPageVM.loginPageModel.etEmailValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;black_900&quot;}"
                    android:textColorHint="@color/{&quot;name&quot;:&quot;black_900&quot;}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="normal" tools:ignore="Autofill"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/lbl_password"
                android:id="@+id/textInputLayPassword"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_5pxv"
                android:paddingEnd="@dimen/_1pxh"
                android:paddingStart="@dimen/_1pxh"
                android:textColorHint="@color/{&quot;name&quot;:&quot;secondaryContainer&quot;}" style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/etPassword"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@={loginPageVM.loginPageModel.etPasswordValue}"
                    android:textColor="@color/{&quot;name&quot;:&quot;black_900&quot;}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="normal" tools:text="@string/lbl_xyz123"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:id="@+id/linearEleven"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:drawablePadding="@dimen/_9pxh"
                    android:drawableStart="@drawable/drawable_dhi_0"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/checkBoxRememberme"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_remember_me"
                    android:textColor="@color/{&quot;name&quot;:&quot;secondaryContainer&quot;}"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12pxh"
                    android:textStyle="normal" tools:text="@string/lbl_remember_me"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRemeberMeForget"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{loginPageVM.loginPageModel.txtRemeberMeForget}"
                    style="@style/txtPoppinsmedium12_2" tools:text="@string/msg_forget_password"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_primary_radius_12"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="center" android:id="@+id/btnLogin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_13pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_13pxv"
                android:singleLine="true"
                android:text="@string/lbl_login"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;white_A700&quot;}"
                android:textFontWeight="600"
                android:textSize="@dimen/_16pxh"
                android:textStyle="bold" tools:text="@string/lbl_login"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearFrameTwo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end" android:gravity="top"
                    android:id="@+id/txtConfirmation"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{loginPageVM.loginPageModel.txtConfirmation}"
                    style="@style/txtPoppinsmedium16_2" tools:text="@string/msg_don_t_have_an_account"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAlreadyHaveAn"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{loginPageVM.loginPageModel.txtAlreadyHaveAn}"
                    style="@style/txtPoppinssemibold16" tools:text="@string/lbl_sign_up"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
