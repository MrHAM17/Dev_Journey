<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="playlistVM" type="com.musicplayer.app.modules.playlist.data.viewmodel.PlaylistVM"/>
    </data>
    <LinearLayout android:id="@+id/linearNinety"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;black_900&quot;}">
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:gravity="center_horizontal"
            android:id="@+id/scrollViewScrollView"
            android:layout_height="0dp" android:layout_weight="1" android:layout_width="match_parent">
            <FrameLayout android:id="@+id/frameList"
                android:layout_height="@dimen/_729pxv" android:layout_width="match_parent">
                <View android:id="@+id/viewListBackground"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_729pxh" android:layout_width="@dimen/_390pxh"/>
                <LinearLayout android:id="@+id/linearSeventyNine"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <View
                        android:background="@drawable/rectangle_bg_name_onprimarycontainer_radius_2"
                        android:id="@+id/viewSwipeIndicator"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_5pxv" android:layout_width="@dimen/_35pxh"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:gravity="center_horizontal"
                        android:id="@+id/recyclerPlaylist"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        itemSpace="@{@dimen/_16pxh}" tools:itemCount="8" tools:listitem="@layout/row_playlist"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
