<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="favoritesVM" type="com.musicplayer.app.modules.favorites.data.viewmodel.FavoritesVM"/>
    </data>
    <LinearLayout android:id="@+id/linearNinetyFive"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;black_900&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowLeft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrow_left"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_left"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTransfer"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{favoritesVM.favoritesModel.txtTransfer}"
                style="@style/txtRobotomedium20" tools:text="@string/lbl_favourites"/>
            <ImageView android:id="@+id/imageMegaphone"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_megaphone"
                tools:ignore="ContentDescription" tools:src="@drawable/img_megaphone"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearFavorites"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_22pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_22pxv">
            <FrameLayout android:id="@+id/framePlaylist"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_181pxv" android:layout_width="@dimen/_342pxh">
                <ImageView android:id="@+id/imagePlaylistBackground"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_181pxh"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_8pxh}"
                    imageRes="@{@drawable/img_playlist_background_2}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_playlist_background_2"/>
                <LinearLayout android:id="@+id/linearOne"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_16pxh"
                    android:paddingVertical="@dimen/_16pxv" style="@style/groupStylecornerRadius">
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearFifteen"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtRenaissance"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{favoritesVM.favoritesModel.txtRenaissance}"
                            style="@style/txtRobotomedium28" tools:text="@string/lbl_did_you_like_it"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTracksCounter"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@{favoritesVM.favoritesModel.txtTracksCounter}"
                            style="@style/txtRobotoregular16" tools:text="@string/lbl_843_tracks"/>
                    </LinearLayout>
                    <ImageButton android:id="@+id/btnOverflowMenu"
                        android:layout_height="@dimen/_50pxh"
                        android:layout_width="@dimen/_50pxh"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_overflow_menu" tools:ignore="ContentDescription"/>
                </LinearLayout>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerFavorites"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_8pxh}" tools:itemCount="5" tools:listitem="@layout/row_favorites"/>
        </LinearLayout>
    </LinearLayout>
</layout>
